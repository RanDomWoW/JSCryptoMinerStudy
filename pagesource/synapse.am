        li.find('.lineclamp').text(notifications[i].title);
        li.find('.notification__date').text(notifications[i].formatted_created_time);
        li.find('.salon_title').text(notifications[i].target.salon_title);

        if (notifications[i].type == 'salon_post_like' || notifications[i].type == 'salon_comment_like' || notifications[i].type == 'salon_reply_like') {
          li.find('.like-image').css({
            'display': 'inline-block'
          });
        }

        li.show();
        $('.header-toggle-notifications').append(li);
      }
    }
    $("#js-header-bell").on('click', function(){
      var countElement = $('#js-header-notification-count');
      updateNotification(countElement);
      countElement.attr('sent');
      countElement.text(0).hide();
      $('.header-toggle-notifications__wrapper').toggle();
      $('.header-toggle--profile').removeClass('display');
    })

    function createLink(notification) {
        var target = notification.target
        return baseMosesUrl + (function () {
          switch (notification.type) {
            case 'salon_post_add':
              return '/salons/' + target.unique_name + '/posts/' + target.id
            case 'salon_post_like':
            case 'salon_post_follower':
              return '/salons/' + target.unique_name + '/posts/' + target.post_id
            case 'salon_comment_add':
              return '/salons/' + target.unique_name + '/posts/' + target.post_id + '/comments/' + target.id
            case 'salon_reply_add':
              return '/salons/' + target.unique_name + '/posts/' + target.post_id + '/comments/' + target.comment_id +'/replies/'+ target.id
            case 'salon_reply_like':
              return '/salons/' + target.unique_name + '/posts/' + target.post_id + '/comments/' + target.comment_id +'/replies/'+ target.reply_id
            case 'salon_comment_like':
            case 'salon_comment_follower':
              return '/salons/' + target.unique_name + '/posts/' + target.post_id + '/comments/' + target.comment_id
            default:
              throw new Error('Unexpected notification type')
          }
        })()
      }
  });
