

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="CACHE-CONTROL" content="NO-CACHE">
    <meta http-equiv="PRAGMA" content="NO-CACHE">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#637C93">
    <title>AllPay Login</title>
    <link rel="stylesheet" href="inc/index2.css?20171006131043">
    <link rel="shortcut icon" href="/favicon.ico">
</head>


<body>
    <main>
        <div class="container login-page">
            <div class="row">
                <div class="col-1-2">
                    <div class="form-container">
                        <header>
                            <img class="page-logo" src="images/apslogo.gif" alt="AllPay">

                            <h2 class="page-heading">AllPay Login</h2>
                            <div id="loginMessage"></div>
                        </header>

                        <form class="nv-form" method="post" action="login.aspx" autocomplete="off">
                            <div class="warning">
                                </div>
                            <fieldset>
                                <div class="field-group">
                                    <label class="label-text" for="user">Username</label>
                                    <input class="nv-input" type="text" id="user" name="user" placeholder="User Name" tabindex="1">
                                    <a class="nv-form-help" href="Forgot.asp?type=username" tabindex="4">Forgot username?</a>
                                </div>
                                <!-- .field-group -->

                                <div class="field-group field-error">
                                    <label class="label-text" for="password">Password</label>
                                    <input class="nv-input" type="password" id="password" name="password" placeholder="Enter your password" tabindex="2">
                                    <a class="nv-form-help" href="Forgot.asp?type=password" tabindex="5">Forgot password?</a>
                                </div>
                                <!-- .field-group -->

                                <div class="field-group">
                                    <input name="submit" id="submit" type="submit" value="Login" tabindex="3" class="nv-btn-primary btn-login">
                                </div>
                                <!-- .field-group -->
                            </fieldset>
                        </form>
                    </div>
                    <!-- .form-container -->
                </div>
                <!-- .col-1-2 -->

                <div class="col-1-2">
                    <div class="login-page-info" id="loginPageBox">
                        <div class="service-box">
                            <div class="service-box-stripe"></div>
                            <div class="service-box-buttons">
                                <a class="nv-btn service-box-btn" id="moreInfo" target="_blank" href="#tbd">More Info</a>

                            </div>
                        </div>
                        <!-- .service-box -->
                    </div>
                    <!-- .login-page-info -->
                </div>
                <!-- .col-1-2 -->
            </div>
            <!-- .row -->
        </div>
        <!-- .container -->

        <script>
            var loginPageUtil = {
            checkinframe: function () {
                    if (window.parent && window.parent !== window) {
                        window.parent.location = 'index.aspx';
                    }
                },
                currentLink: {},
                docsPath: 'inc/',
                slidesPath: 'images/',
                noRepeatScaledPositioning: function(item,container,xSize,ySize,yPriority, repeat){
                    // item.style['background-position-x'] = ((container.scrollWidth / 2) - (1434 / 2)) + 'px';
                    //  item.style['background-position-y'] = ((container.scrollHeight / 2) - (873 / 2)) + 'px';
                    //maintain aspect ratio and display entire image
                    if (container.scrollWidth > xSize && container.scrollHeight > ySize) {
                        return;
                    }
                    var aspectContainer = container.scrollWidth / container.scrollHeight;
                    var factor = container.scrollWidth / xSize;
                    var nWidth = container.scrollWidth;
                    var nHeight = 873 * factor;
                    if (yPriority || aspectContainer > (xSize / ySize)) {
                        //scale to y
                        factor = container.scrollHeight / ySize;
                        nHeight = container.scrollHeight;
                        nWidth = xSize * factor;
                    }
                    item.style.backgroundSize = nWidth + 'px ' + nHeight + 'px';
                    item.style.backgroundRepeat = repeat||'no-repeat';
                },
                links: [
                      {
                          descriptionHTML: '<span class="productTitle">MyPay Employee Portals</span> Engage employees while reducing your workload',
                          factSheet: 'MyPayFactSheet.pdf',
                          image: 'LoginSlide_MyPay.jpg',
                          cssClass: 'any-slide MyPay',
                          positionSetter: function (item, container) {
                              //1080x1440
                              loginPageUtil.noRepeatScaledPositioning(item, container, 1080, 1440, true,'repeat-x');
                             // item.style['background-position-x'] = ((container.scrollWidth / 2) - (1080 / 2)) + 'px';
                              //item.style['background-position-y'] = ((container.scrollHeight / 2) - (1440 / 2)) + 'px';
                          }
                      }
                      , {
                          descriptionHTML: '<span class="productTitle">AllPay Applicant Tracking</span> Recruit, manage, and hire top candidates online',
                          factSheet: 'ApplicantTrackingDataSheet.pdf',
                          image: 'LoginSlide_ATS.png?b',
                          cssClass: 'any-slide ATS',
                          positionSetter: function (item, container) {
                              item.style['background-position-x'] = ((container.scrollWidth / 2) - (2048 / 2)) + 'px';
                              item.style['background-position-y'] = ((container.scrollHeight / 2) - (2048 / 2)) + 'px';
                              
                          }
                      }
                      , {
                          descriptionHTML: '<span class="productTitle">Alliance Employment Tax Credits</span> We have the tools and the team to help you capture all of your tax credits!',
                          factSheet: 'TaxBreakFactSheet.pdf',
                          image: 'LoginSlide_WOTC.png?b',
                          cssClass: 'any-slide WOTC',
                          positionSetter: function (item, container) {
                              loginPageUtil.noRepeatScaledPositioning(item, container, 2309, 1298, true,'repeat-x');
                          }
                      }
                      , {
                          descriptionHTML: '<span class="productTitle">AllPay New Hire Onboarding</span> All of your new hire paperwork is digitized and stored online.',
                          factSheet: 'AllAboardOnboarding.pdf',
                          image: 'LoginSlide_Onboarding.jpg',
                          cssClass: 'any-slide Onboarding',
                          positionSetter: function (item, container) {
                              item.style['background-position-x'] = ((container.scrollWidth / 2) - (2048 / 2)) + 'px';
                              item.style['background-position-y'] = ((container.scrollHeight / 2) - (1565 / 2)) + 'px';
                          }
                      }
                      , {
                          descriptionHTML:
                          '<span class="productTitle">AllPay Benefit Management</span> Enjoy paperless nirvana with our online enrollment and benefit management system.',
                          factSheet: 'AllPayBenefitsFactSheet.pdf',
                          image: 'LoginSlide_Benefits.jpg',
                          cssClass: 'any-slide Benefits',
                          positionSetter: function (item, container) {
                              loginPageUtil.noRepeatScaledPositioning(item, container,2048,1360, true);
                          }
                      }
                ]
          ,
                getNextSlide: function (min, max) {
                    if (window.localStorage) {
                        var slideNumStr = window.localStorage.getItem('loginSlide')
                        if (!slideNumStr) {
                            window.localStorage.setItem('loginSlide', '1');
                            return 1;
                        }
                        else {
                            var slide = Number(slideNumStr) + 1;
                            if (slide >= max) { slide = min; }
                            if (slide < min) { slide = max; }
                            window.localStorage.setItem('loginSlide', slide);
                            return slide;
                        }
                    }
                    return Math.floor(Math.random() * max) + min;
                },
                getRandomLink: function () {
                    return loginPageUtil.links[loginPageUtil.getNextSlide(0, loginPageUtil.links.length)];
                },
                createLink: function (link) {
                    return '<span class="service-box-content">' + link.descriptionHTML + '</span>'
                },
                autoHeight: function () {
                    // Set height 100% automatically on load
                    if (window.innerWidth < 768) {
                        var loginPageInfo = document.getElementsByClassName('login-page-info')[0] || {};
                        loginPageInfo.style.height = screen.height / 3 + 'px';
                        window.addEventListener('resize', loginPageUtil.setHeight);
                        window.addEventListener('scroll', loginPageUtil.setHeight);
                    }
                },
                setHeight: function () {
                    loginPageInfo.style.height = screen.height / 3 + 'px';
                }
            }
            loginPageUtil.checkinframe();
            var link = loginPageUtil.getRandomLink();
            document.getElementById('moreInfo').setAttribute('href', loginPageUtil.docsPath + link.factSheet)
            loginPageUtil.currentLink = link;
            var serviceBox = document.getElementsByClassName('service-box')[0];
            var loginPageInfo = document.getElementsByClassName('login-page-info')[0];

            loginPageInfo.classList.add(link.cssClass.split(' ')[0]);
            loginPageInfo.classList.add(link.cssClass.split(' ')[1]);
            // Responsiveness
            if (window.innerWidth > 768) {
                loginPageInfo.setAttribute('style', 'background: url(' + loginPageUtil.slidesPath + link.image + ') repeat;');
            } else {
                loginPageInfo.setAttribute('style', 'background-image: url(' + loginPageUtil.slidesPath + link.image + ');');
            }
            link.positionSetter(loginPageInfo, document.getElementById('loginPageBox'));
            window.addEventListener('resize', function () {
                link.positionSetter(loginPageInfo, document.getElementById('loginPageBox'));
            });
            serviceBox.getElementsByClassName('service-box-stripe')[0].innerHTML = loginPageUtil.createLink(link);
            loginPageUtil.autoHeight();
            setTimeout(function () {
                if (!document.getElementById('user').value) {
                    document.getElementById('user').focus();
                }
            }, 30);
        </script>
    </main>
</body>
</html>