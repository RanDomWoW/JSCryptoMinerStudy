        <script>
            function getCookie(cname) {
                var name = cname + "=";
                var ca = document.cookie.split(';');
                for (var i = 0; i < ca.length; i++)
                {
                    var c = ca[i].trim();
                    if (c.indexOf(name) == 0)
                        return c.substring(name.length, c.length);
                }
                return "";
            }
            var ric_estado = getCookie('ric_estado');
            if(ric_estado == 'PR') {
                location.href = "http://pr.ricmais.com.br";
            } else if(ric_estado == 'SC') {
                location.href = "http://ricmais.com.br/sc";
            }
        </script>

