            function updateClock(){
                var myDate= new Date();
                var h = myDate.getHours();
                var m = myDate.getMinutes();
                var s = myDate.getSeconds();
                var dateContainerPosition = (((h * 3600) + (m * 60) + s) * 100) / 86400;
                var indicatorColors = (s % 2 == 0) ? ['#999999', '#f4cc14', '#f48814', '#f41414'] : ['#cccccc', '#f9e589', '#f9c389', '#f98989'];
                
                h = (h < 10) ? '0' + h : h;
                m = (m < 10) ? '0' + m : m;
                s = (s < 10) ? '0' + s : s;
                jQuery('.jClock').html(makeDoubleDigit(h) + ' : ' + makeDoubleDigit(m) + ' : ' + makeDoubleDigit(s));
                var t = setTimeout(function(){updateClock()}, 500);
            }
            
            updateClock();
            
            function toPersianNumber(num){
                var persianNumberArray = new Array('۰','۱','۲','۳','۴','۵','۶','۷','۸','۹');
                var res = '';
                while(num/10 > 0){
                    n = num%10;
                    num = parseInt(num/10);
                    res = persianNumberArray[n] + res;
                }
                return res;
            }
            
            function makeDoubleDigit(num){
                var retValue = toPersianNumber(num);
                if(retValue == '')
                    return '۰۰';
                else if(retValue.toString().length == 1)
                    return '۰' + retValue.toString();
                else
                    return retValue;
            }
            
