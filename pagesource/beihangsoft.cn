	<script type="text/javascript">
	    function login(uid, pid) {
	        document.getElementById("btnSubmit").value = "loading";
	        document.getElementById("btnSubmit").disabled = true;
            var username = document.getElementById(uid).value;
            var password = document.getElementById(pid).value;
            if(username=='' || password=='')
                window.alert("用户名密码不能为空");
            
            
            var xmlhttp;
            if (window.XMLHttpRequest) {// code for IE7+, Firefox, Chrome, Opera, Safari
                xmlhttp = new XMLHttpRequest();
            }
            else {// code for IE6, IE5
                xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
            }
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                    var text = xmlhttp.responseText;
                    if (text == "Error") {
                        window.alert("用户名不存在或密码错误");
                        document.getElementById("btnSubmit").value = "登录系统";
                        document.getElementById("btnSubmit").disabled = false;
                    } else {
                        window.location.href = text;
                    }
                }
            }
            xmlhttp.open("GET", "login.ashx?userName=" + username + "&password=" + password, true);
            xmlhttp.send();
        }
        function KeyDown(){
            if (event.keyCode == 13){

                login("usernameinput", "passwordinput");
            }
        }
    </script>
