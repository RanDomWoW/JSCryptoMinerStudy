      <script type="text/javascript">
        (function () {
          var ck_email = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
          var gaEventSent = false;

          window.validateBannerForm = function (form) {
            var email = form.querySelector('[type="email"]').value;
            var errors = [];
            var formType;

            if (!ck_email.test(email)) {
              errors[errors.length] = "You must enter a valid email address.";
            }

            if (errors.length > 0) {
              reportErrors(errors);
              return false;
            }

            if ( typeof _gaq === 'object' && gaEventSent == false) {

              gaEventSent = true;
              _gaq.push(['t1._set','hitCallback', function() { submitModalNewsletterForm(form); }]);
              _gaq.push(['t1._trackEvent', 'The Happy Foodie Newsletter banner', 'Submit form']);

              if (storageAvailable('sessionStorage')) {
                window.sessionStorage.setItem('thf_banner_subscribed', true);
              }
            }

            return false;
          };

          function submitModalNewsletterForm(form) {
            var $form = $(form);
            var url = $form.attr('action');
            var $inputs = $form.find('input[type="text"], input[type="email"], input[type="hidden"]');
            var http = new XMLHttpRequest();
            var params = [];

            $inputs.each(function () {
              params.push($(this).attr('name') + '=' + encodeURIComponent( $(this).val() ));
            });

            http.open('POST', url, true);
            http.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            http.send(params.join('&'));

            $form.hide();
            $form.next('.newsletter-bar__thanks').removeClass('hidden');

            return false;
          };

          function reportErrors(errors){
            var msg = "Please check your information in the following fields:\n";
            for (var i = 0; i<errors.length; i++) {
              var numError = i + 1;
              msg += "\n" + numError + ". " + errors[i];
            }
            alert(msg);
          }

        })();
