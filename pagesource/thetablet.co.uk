<script src="/Scripts/jquery.storageapi.min.js"></script>

<!-- Show/Hide -->
<script type="text/javascript">
    $(document).ready(function () {

        // choose text for the show/hide link - can contain HTML (e.g. an image)
        var showText = 'Show';
        var hideText = 'Hide';

        //declare local storate
        var storage = $.localStorage;

        //'hide' or 'show' home page news sections by checking the local storage object. Total sections are 12, only 3 to 12 sections are in use and others are disabled
        for (var i = 3; i <= 12; i++) {
            if (storage.get('tablet-newscontainer-' + i + 'a') === "hide") {
                $('#tablet-newscontainer-' + i + 'a').html(showText);
                $('#tablet-newscontainer-' + i + 'b').css("display", "none");
            }
        }

        // capture clicks on the toggle links
        $('a.toggleLink').click(function () {

            // change the link and set the value to local storage depending on whether the element is shown or hidden
            if ($(this).html().toLowerCase() === "hide") {

                $(this).html(showText);
                storage.set($(this).attr("id"), 'hide');

            } else {

                $(this).html(hideText);
                storage.set($(this).attr("id"), 'show');
            }

            $(this).parent().next('.toggle').toggle('slow');

            return false;
        });
    });

</script>


