<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>中华人民共和国国务院新闻办公室</title>
    <script type="text/javascript">
        function GetTerminal() {
            try {
                var regexphone = new RegExp("(bb\\d+|meego).+mobile|ucweb|ucbrowser|mqqbrowser|360browser|micromessenger|avantgo|bada\\/|blackberry|android|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\\.(browser|link)|vodafone|wap|windows (ce|phone)|xda|xiino", "gim");
                var regextablet = new RegExp("ipad|gt-p7500|tablet|mi pad", "gim");
                var agent = navigator.userAgent;
                if (regexphone.test(agent)) {
                    return 1;
                }
                if (regextablet.test(agent)) {
                    return 2;
                }
                else {
                    return 3;
                }
            } catch (e) {
                return 3;//出现异常返回电脑端。
            }
        }
        function GetUrl(terminal) {
            if (terminal == 1) {
                return "http://www.scio.gov.cn/m/index.htm";
                //return "http://www.scio.gov.cn/index.htm";
            }
            else if (terminal == 2) {
                return "http://www.scio.gov.cn/index.htm";
            }
            else {
                return "http://www.scio.gov.cn/index.htm";
            }
        }
    </script>
    <script type="text/javascript">
        var nInterval;
        var countdown = 10000;
        var times = 10;

        var djsinterval = countdown / times;
        
        function toHome() { var terminal = GetTerminal(); window.location.href = GetUrl(terminal); }
        function setTime() {
            countdown = countdown - djsinterval;
            document.getElementById("info").innerHTML = countdown / djsinterval + " 秒";
            if (countdown == 0) window.clearInterval(nInterval);
        }

        window.onload = function() {
            try {
                var terminal = GetTerminal();
                if (terminal == 3 || terminal == 2) {
                    window.location.href = GetUrl(terminal);
                }
                else {
                    document.getElementById("wrap").style.display = "block";
                    window.setTimeout("toHome()", countdown);
                    nInterval = window.setInterval("setTime()", djsinterval);
                }
            }
            catch (e) {alert(e);
                window.location.href = GetUrl(3);//返回电脑版
            }
        }
    </script>
<style type="text/css">
    body{background-image:url(http://www.scio.gov.cn/template/6290/Image/tz-001.gif);}
    #wrap{position:fixed;top:50%;left:0;width:100%;}
    #content{position:relative;height:160px;top:-80px;width:300px;margin:0px auto;background-image:url(http://www.scio.gov.cn/template/6290/Image/tz-002.gif);background-repeat:no-repeat;
        background-position:left center; -moz-background-size:300px 157px; background-size:300px 157px;text-align:center;  }
    .moreblock {display: block;	height: 30px;line-height: 30px;	text-align: center;	margin: 10px 10px;	background: #EDEDED;border: 1px solid #ccc;	font-size: 16px;border-radius: 2px;clear: both;	width:90%;}
    a {	outline: none;	text-decoration: none;	color: #343434;	font: 12px/1.5 arial,宋体,sans-serif;line-height: 28px;}
</style>
</head>
<body>
    <div id="wrap" style="display:none">
        <div id="content">
            <table border="0" cellpadding="5" cellspacing="5" width="100%">
                <tr>
                    <td>
                        <img src="http://www.scio.gov.cn/template/6290/Image/logo3.jpg" border="0" style="height: 80px" />
                    </td>
                    <td>
                        <a href="http://www.scio.gov.cn/index.htm" class="moreblock">进入电脑版</a>
                        <a href="http://www.scio.gov.cn/m/index.htm" style="display:none">进入移动版</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><span id="info"></span></td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>