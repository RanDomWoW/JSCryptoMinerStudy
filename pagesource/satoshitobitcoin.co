			jQuery("#stb-sts").bind('input',function(){
				s = jQuery("#stb-sts").val().toString().replace(/\,/g,'');
				if (s>=1000)
				{
					b = s.toString().split(".");
					b[0] = b[0].replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,")
					c = b.join('.');
					jQuery("#stb-sts").val(c);
				}
				if (isNaN(s*2)) jQuery("#stb-btc").val(0);
				else
				{
					q = (s/100000000).toFixed(8);
					a = q.toString().split(".");
					a[0] = a[0].replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,")
					p = a.join('.');
					jQuery("#stb-btc").val(p);
				}
			});
		});
	</script>

