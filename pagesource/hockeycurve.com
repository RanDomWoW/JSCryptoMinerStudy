<script>
function contact(){
		$('#contactmessage').css("display","none");
		$('#servererror').css("display","none");
		$('#dataerror').css("display","none");
		if($('#name').val()==""){
			message = "Please fill Correct Name";
			$('#dataerror').html(message);
			$('#dataerror').css("display","block");
			return
		}
		if($('#email').val()=="" || $('#email').val().indexOf('@')=='-1'){
			message = "Please fill Correct Email";
			$('#dataerror').html(message);
			$('#dataerror').css("display","block");
			return
		}
		if($('#mobile').val()=="" || isNaN(parseInt($('#mobile').val()))){
			message = "Please fill Correct Phone Number";
			$('#dataerror').html(message);
			$('#dataerror').css("display","block");
			return
		}
		message = "<table border='1'><tr><th>Name</th><th>Email</th><th>Phone</th></tr><tr><td>"+$('#name').val()+"</td><td>"+$('#email').val()+"</td><td>"+$('#mobile').val()+"</td></tr></table>";
		$.ajax({
		  method: "GET",
		  url: "sendemail.php",
		  data: {message: message}
		})
		  .done(function( msg ) {
		  	$('#contactbutton').blur();
		    if(msg=='success'){
		    	$('#contactmessage').css("display","block");
				$('#name').val("");
				$('#mobile').val("");
				$('#email').val("");
		    }
		    else{
		    	$('#servererror').css("display","block");
		    }
		  })
		  .fail(function(msg){
		  	$('#contactbutton').blur();
			$('#servererror').css("display","block");
		  });
	}
</script>
