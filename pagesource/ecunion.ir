    <script type="text/javascript">
        $(function () {
            new Swiper ('#section-swiper', {
                loop: true,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                grabCursor: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false
                }
            });

            var newsItem = new Swiper('#news_item', {
                grabCursor: true,
                effect: 'fade',
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false
                },
                on: {
                    slideChange: function() {
                        var activeIndex = newsItem.activeIndex;
                        $(newsThumbs.slides).removeClass('is-selected');
                        $(newsThumbs.slides).eq(activeIndex).addClass('is-selected');
                        newsThumbs.slideTo(activeIndex, 500, false);

                    }
                }
            });

            var newsThumbs = new Swiper('#news_thumbs', {
                spaceBetween: 10,
                centeredSlides: false,
                slidesPerView: 'auto',
                touchRatio: 0.2,
                slideToClickedSlide: true,
                grabCursor: true,
                freeMode: true,
                on: {
                    tap: function () {
                        var clicked = newsThumbs.clickedIndex;
                        $(newsThumbs.slides).removeClass('is-selected');
                        $(newsThumbs.clickedSlide).addClass('is-selected');
                        newsItem.slideTo(clicked,500, false);
                    }
                }
            });
        })
    </script>

    <script type="text/javascript" src="/bundles/pouyasoft/lib/selectize.js/js/standalone/selectize.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var selectize_form = $('#form_domain').selectize({
                valueField: 'businessCode',
                labelField: 'businessTitle',
                searchField: ['businessTitle', 'businessDomain'],
                options: [],
                create: false,
                openOnFocus: false,
                render: {
                    option: function(item, escape) {
                        return '<div>' + escape(item.businessTitle) + '(' + escape(item.businessDomain) + ')</div>';
                    }
                },
                load: function(query, callback) {
                    if (!query.length) return callback();
                    $.ajax({
                        url: '/find_business_ajax',
                        type: 'GET',
                        dataType: 'json',
                        data: {
                            q: query,
                            page_limit: 10
                        },
                        error: function() {
                            callback();
                        },
                        success: function(res) {
                            callback(res);
                        }
                    });
                },
                onChange: function (value) {
                    if(value) $('#form_domain').submit();
                    selectize_form[0].selectize.clearOptions();
                }
            });
        });
    </script>
