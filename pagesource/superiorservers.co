<script type="text/javascript">
$(function()
{

	var app = new Vue({
		el: '#app',
		data: {
			stats: false,
			servers: false,
			total: false,
			stack: 3
		},
		methods: {
			GetServers()
			{
				var _self = this;
				$.ajax({
					dataType: 'json',
					url: "/api/home",
					success: function(res)
					{
						_self.stats = res.Stats;
					}
				});
			},
			GetHomeSettings()
			{
				var _self = this;
				$.ajax({
					dataType: 'json',
					url: "/api/servers",
					success: function(res)
					{
						_self.total = res.Total;

						var servers = [];
						var j = 0;

						for(var i = 0; i < res.Servers.length; i++)
						{
							if(i%_self.stack == 0) j++;
							if(i == 0) res.Servers[i].gfx = true;

							servers[j] = servers[j] || [];
							servers[j].push(res.Servers[i]);
						}

						console.log(servers);
						_self.servers = servers;
					}
				});
			}
		},
		mounted()
		{
			this.GetHomeSettings();
			this.GetServers();

			var _self = this;
			setInterval(function(){
				_self.GetHomeSettings();
				_self.GetServers();
			}, 30000);
		}
	});
});	
</script></div>
