<script>
    function updateVideoSize() {
        $('.classic').find('iframe').each(function(){
            if($(this).attr('src').indexOf('facebook.com') !== -1 || $(this).attr('src').indexOf('youtube.com') !== -1){
                var videoHeight = $(this).attr('height');
                var videoWidth = $(this).attr('width');
                $(this).css("width", "100%");
                $(this).css("height", $('.classic').width()*videoHeight/videoWidth);
            }
        });
    }

    var isGetNavBarContent = false;
    $('.show_preview').mouseenter(function (e) {
        if (!isGetNavBarContent) {
            var preview = this;
            isGetNavBarContent = true;
            $.ajax({
                url: "https://www.hongkongcard.com/ajax/navBarContent",
                method: 'get',
            }).done(function (result) {
                $('body').append(result);
                // Display Preview
                showPreview(preview);
                $(".show_preview").hover(function () {
                    showPreview(this);
                }, function () {
                    $(".preview").removeClass("active");
                    $("li.primary").removeClass("hover");
                });
                imgResize(".preview img");
            });
        }
    });

    
    $(document).ready(function(){
        $('#member-forget-password').click(function () {
            var email = $('form.reset_password [name="email"]').val();
            if (!emailValidate(email)) {
                $('.reset_password .error_message').html("請輸入正確的電郵");
                return false;
            }
            $.post({
                url: "https://www.hongkongcard.com/forget-password",
                data: {
                    email: email,
                }
            }).done(function (result) {
                $('.reset_password .error_message').html(result['message']);
            });
        });

        var isChecked_login = false;
        $('#login_form').submit(function (e) {
            if (!isChecked_login) {
                e.preventDefault();
                $.post({
                    url: "https://www.hongkongcard.com/login",
                    data: {
                        email: $('#login_form [name="email"]').val(),
                        password: $('#login_form [name="password"]').val(),
                    },
                    dataType: "json",
                }).done(function (result) {
                    if (result['status'] == 100) {
                        isChecked_login = true;
                        $('#login_form').submit();
                    } else {
                        $('#login_form .error_message').html(result['message']);
                    }
                });
            }
        });

        /**
         * 注冊表單驗證
         */
        var isChecked_register = false;
        $('#register_form').submit(function (e) {
            if (!isChecked_register) {
                e.preventDefault();
                console.log($('#register_form [name="nick_name"]').val(), $('#register_form [name="email"]').val(), $('#register_form [name="password"]').val()
                ,$('#register_form [name="confirm_password"]').val(), $('#register_form [name="check_value"]').val());
                $.post({
                    url: "https://www.hongkongcard.com/register",
                    data: {
                        nick_name: $('#register_form [name="nick_name"]').val(),
                        email: $('#register_form [name="email"]').val(),
                        password: $('#register_form [name="password"]').val(),
                        confirm_password: $('#register_form [name="confirm_password"]').val(),
                        check_value: $('#register_form [name="check_value"]').val()
                    },
                    dataType: "json",
                }).done(function (result) {
                    if (result['status'] == 100) {
                        isChecked_register = true;
                        $('#register_form').submit();
                    } else {
                        $('#register_form .error_message').html(result['message']);
                    }
                });
            }
        });

            });

    $('.open_overlay').click(function () {
        if($(this).data('section')) {
            openOverlay($(this).data('section'));
        }
    })

</script>
