//slide
var setSlide = function() {
	//default
	var slide = $('#JS_slide');
	var paging = $('#JS_paging').find('a');
	var width = slide.width();
	var speed = 2000;
	var index = 0; //현재 노출 index
	var list = slide.find('> li');
	var max = list.size();
	var time = null;

	if(max <= 1) return;
	
	//view
	var setView = function(option) {
		var option = option || {};
		list.css('z-index', '0');
		if(typeof option.index == 'number') { //index btn
			index = option.index;
			list.eq(index).animate({opacity: 1});
			list.not(':eq('+(index)+')').animate({opacity: 0});
		}else if(typeof option.mode == 'string') { //next, prev btn
			list
			.eq(index)
			.css("z-index", "5")
			.animate(
				{
					opacity: 0
				}, 
				{
					duration: speed,
					queue: false,
					specialEasing : "swing",
					complete: function() {
						
					} 
				}
			);
			switch(option.mode) {
				case 'next':
					//animate
					if(typeof option.index == 'undefined') {
						index++;
					}
					if(max-1 < index) index = 0;
					list
					.eq(index)
					.css("z-index", "10")
					.animate(
						{
							opacity: 1
						}, 
						{
							duration: speed,
							queue: false 
						}
					);
					break;
				case 'prev':
					//animate
					index--;
					if(0 > index) index = max-1;
					list
					.eq(index)
					.css("z-index", "10")
					.animate(
						{
							opacity: 1
						}, 
						{ 
							duration: speed, 
							queue: false 
						}
					);
					break;
				default :
					return;
			}
		}
		//slide
		//list.hide();
		//list.eq(index).show();

		//paging index
		paging.removeClass('on');
		paging.eq(index).addClass('on');
	};
	
	//자동 슬라이드
	var setAuto = function() {
		time = setStartTime(function(){ setView({'mode':'next'}); }, 5000);
	};

	//페이징 버튼
	paging.on('click', function() {
		setCloseTime(time);
		setView({'index': $(paging).index(this)});
		setAuto();
	});

	//자동 설정
	setAuto();
};

