    <script type="text/javascript">
        $(document).ready(function () {

            var _lang = $('html').attr('lang');

            if (_lang == 'ar') {

                $('#arrow-ar').show();
                $('#arrow-en').hide();

            }
            else {

                $('#arrow-ar').hide();
                $('#arrow-en').show();

            }


            $(document).on('click', '.languageSwitch', function (event) {
                var lang = $(this).attr('id');
                $.ajax({
                    url: "/Language/SetCulture",
                    datatype: "text",
                    data: { culture: lang },
                    type: "GET",
                    success: function (data) {
                        location.reload(true);
                        document.location.href = String(document.location.href).replace(/#/, "");
                    },
                    error: function () {
                        alert('error');
                    }
                });
            });
        });
    </script>
 

