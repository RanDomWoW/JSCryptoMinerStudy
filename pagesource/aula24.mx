function valida(){

	var l1 = document.form.login.value;
	var l2 = document.form.senha.value;
	var cont = 0;
	if (l1.length == 0){
		alert("Teclee su clave de usuario!");
		return false;
	}
	if (l2.length == 0){
	  	alert("Teclee su contrasea!");
		return false;
	}
	for (i=0 ; i<l1.length ; i++){
		if (l1.substring(i,i+1) == "@"){
		  	cont += 1;
		}
	}
	if (cont == 0){
	  	document.form.login.value += "@aula24horas.com";
		document.form.login.value = document.form.login.value.replace(/ trendmail\.com\.br\@trendmail\.com\.br$/i,"@aula24horas.com");
	}
	if (cont > 1){
	  	alert("Clave de usuario y/o contrasea incorrectos!");
		return false;
	}
	return true;
}
