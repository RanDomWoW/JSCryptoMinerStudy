<script type="text/javascript">
	var page = params.getURLParam("page");
	var no = params.getURLParam("no");
	var type = params.getURLParam("type");
	var url = "/main/index";
	var gnb = 0;

	var bodyheight = null;
	var bodywidth = null;

	$(window).resize(function() {
		bodyheight = $(window).height();
	});

	$(document).ready(function(){

		if(page!=null){
			switch(page){
				case 'newsview':
					url = "/templet/newsview.html";
					gnb = 0;
					break;

				case 'gbview':
					url = "/templet/gbview.html";
					gnb = 1;
					break;

				case 'information':
					url = "/templet/information.html";
					gnb = 2;
					break;

				case 'recruit':
					url = "/templet/recruit.html";
					gnb = 3;
					break;
			}
		}

		$.ajax({
			url: url
			, dataType: "html"
			, beforeSend: function( xhr ) {
				var $spinner = $("<img id='spinner' src='/spinner.gif'/>");
				$("#container").html($spinner);
				if(bodyheight == null){
					bodyheight = $(document).height();
				}
				var top = bodyheight /2;
				$spinner.css({position : "absolute", top: top, left: "50%"});
			}
			, success: function(data) {
				$("#container").html(data);

				if(page=="newsview"){
					loadNews(no);
				}
				else if(page=="gbview"){
					loadGb(no);
				}
			}
		})

		// gnb의 on 처리 ( 클릭 표시 )
		$(".btn_dept1").each(function(){
			$(this).parent().removeClass("on");
		});

		if(page != "academy"){
			$(".gnb").children().eq(gnb).addClass("on");
		}

		// 아카데미 팝업 Display
		openAcademy();

	});

	//리쿠르트 이미지 클릭
	function goRecruit(){
		$("#goRecruit").trigger("click");
	}

	// 아카데미 페이지로 이동
	function goAcademy(){
		$.ajax({
			url: "./templet/academy.html"
			,dataType: "html"
			,success: function(data) {
				closeAcademy();
				$("#container").html(data);
			}
		});
	}

	// 아카데미 팝업 열기
	function openAcademy(){
		$.ajax({
			url: "/main/academy/getData",
			type : "get"
		}).done(function( result ) {
			if(result.object != null){
				setTimeout(function(){
// 				$("#linkRecruit").hide();
					$("#linkAcademy").show();
					$("#layer_popup").show();
				},1000);
			}
			else{
			}
		});
	}

	//아카데미 팝업 닫기
	function closeAcademy(){
		$("#layer_popup").hide();
	}

</script>
