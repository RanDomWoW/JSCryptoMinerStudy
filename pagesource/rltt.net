<script src="/js/jquery.cookie.js" type="text/javascript"></script>
<script>
	$(document).ready(function(){
        var cookieValue = $.cookie("servicearea");
        console.log(cookieValue);
        if (cookieValue) {
            $("#servicearea").hide();
            $(".servicelink").text("Area " + cookieValue);
        } else {
            $("#sevricearea").show();
            $(".servicelink").text("?");
            $("#mainmenu").hide();
            $("#menucontainer").css("opacity","0.5");
            //$("#logo").css("top","-400px");
        }

        $(".servicelink").click(function(e){
            e.preventDefault();
            if($("#servicearea").is(":visible")){
                $("#servicearea").slideUp("slow");
            } else {
                $("#servicearea").slideDown("slow");
            }
        });
        
         $("#servicemap > li").mouseover(function(){
             var servicearea = $(this).index();
             console.log(servicearea);
             if(servicearea == 0){
                $(this).animate({"left" : "-4px", "top" : "-4px"},'fast');
             } else if(servicearea == 1){
                $(this).animate({"right" : "-4px", "top" : "-4px"},'fast');
             } else if(servicearea == 2){
                $(this).animate({"left" : "-4px", "top" : "108px"},'fast');
             } else if(servicearea == 3){
                $(this).animate({"right" : "-4px", "bottom" : "-4px"},'fast');
             }
         });

        $("#servicemap > li").mouseout(function(){
             var servicearea = $(this).index();
             console.log(servicearea);
             if(servicearea == 0){
                $(this).animate({"left" : "0px", "top" : "0px"},'fast');
             } else if(servicearea == 1){
                $(this).animate({"right" : "0px", "top" : "0px"},'fast');
             } else if(servicearea == 2){
                $(this).animate({"left" : "0px", "top" : "104px"},'fast');
             } else if(servicearea == 3){
                $(this).animate({"right" : "0px", "bottom" : "0px"},'fast');
             }
         });

        $("#servicemap > li  a").click(function(e){
             e.preventDefault();
             var areaname = $(this).children("img").attr("alt");
             var areaid = $(this).attr("title");
             console.log(areaname);
             $.cookie('servicearea', areaname, { expires : 30 });
             $.cookie('serviceareaid', areaid, { expires : 30 });
             $("#menucontainer").animate({opacity:1}, 500, function(){
                $("#servicearea").slideUp("slow", function(){
                location.reload();   
             }); 
             });
         });
        
        // === Cookie of city ====================================== /
        $("#servicecities > li  a").click(function(e){
             e.preventDefault();
             var cityid = $(this).attr("title");
             console.log(cityid);
             $.cookie('cityid', cityid, { expires : 30 });
         });

        $(".submenu, .arrow-up").hide();

        $("#mainmenu li a.toplevel").click(function(e){
            linkTitle = $(this).text();
            //if(linkTitle !== "Services"){
                e.preventDefault();
                var theid = $(this).parent().attr('id');
                if($(".submenu-"+theid).is(":visible")){
                    $(".submenu, .arrow-up").slideUp("fast");
                    $(this).css({"color":"#ffffff"});
                } else {
                    $(".submenu, .arrow-up").slideUp("fast");
                    $(this).css("color", "#f59131");
                    $(".submenu-"+theid+", .arrow-"+theid).slideDown("fast");
                }
            //}
        });

        var searchview = "hidden";
        $(".searchicon").click(function(e){
            if(searchview == "hidden"){
                $("#searchform").slideDown(200);
                this.src = '/images/icons/searchicon-hover2.png';
                searchview = "visible";
            } else {
                $("#searchform").slideUp(200);
                searchview = "hidden";
                this.src = '/images/icons/searchicon-new.png';
            }
        });

        var mainmenu = "hidden";
        $(".menuicon").click(function(e){
            if(mainmenu == "hidden"){
                $("#mainmenu").show().animate({height:"122px"});
                mainmenu = "visible";
            } else {
                $("#mainmenu").animate({height:"0px"}, function(){
                    $(this).hide();   
                });
                $("#searchform").slideUp(200);
                searchview = "hidden";
                mainmenu = "hidden";
                if($("#servicearea").is(":visible")){
                    $("#servicearea").slideUp("slow");
                }
            }
        });

        $('.searchicon').hover(function () {
            this.src = '/images/icons/searchicon-hover2.png';
        }, function () {
            if(searchview == "hidden"){
                this.src = '/images/icons/searchicon-new.png';
            }
        });
        });

        $(document).mouseup(function (e){
        var container = $(".submenu, .arrow-up");

        if (!container.is(e.target) // if the target of the click isn't the container...
            && container.has(e.target).length === 0) // ... nor a descendant of the container
        {
            container.slideUp("fast");
            $("#mainmenu li a.toplevel").css("color", "#ffffff");
        }
        });

</script>

