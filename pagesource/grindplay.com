<script>
    function changeFrontForm(elem) {
        var currentForm = $(elem);
        currentForm.addClass('hidden');

        if(currentForm.prev('form').length > 0) {
            currentForm.prev('form').removeClass('hidden');
        } else {
            currentForm.next('form').removeClass('hidden');
        }

    }

    function doLogin()
    {
        $("#bt_signin span").html("Loading...");

        var action = $("#login").attr('action');
        var form_data = {
            username: $("#login #username").val(),
            password: $("#login #password").val(),
            is_ajax: 1
        };

        $.ajax({
            type: "POST",
            url: action,
            data: form_data,
            success: function(response)
            {
                $("#bt_signin span").html("Sign In");
                if(response == 'Success')
                    $("#login").hide(0, function() {
                        $("#basic-modal-content").html("<span class='login_msg'>You have logged in successfully!</span>");
                        url = "http://members.grindplay.com/";
                        window.location = url;
                    });
                else
                    $("#message").html("<span class='error'>"+ response +"</span>");
            }
        });

        return false;
    }


    function doForgotPassword()
    {
        $("#submit-password-form").html("Send");
        $("#message-password").html();

        var action = "https://www.grindplay.com/front/forgot_password_ajax";
        var form_data = {
            email: $("#password_form #username").val(),
            forgot_password: 1,
            is_ajax: 1
        };

        $.ajax({
            type: "POST",
            url: action,
            data: form_data,
            success: function(response)
            {
                $("#submit-password-form").html("Send");

                if(response == 'Your password has been sent to your email.') {
                    $("#message-password").html("<span class='forgot-success'>"+ response +"</span>");
                    $("#submit-password-form").prev("span").html("Send");
                }
                else {
                    $("#message-password").html("<span class='forgot-error'>"+ response +"</span>");

                    $("#submit-password-form").html("Send");
                }
            },
            error:function(jqXHR, textStatus, errorThrown){

            }
        });

        return false;
    }

    function validate_login()
    {
        var emailaddressVal = $("#login #username").val();
        var passwordVal = $("#login #password").val();

        if(emailaddressVal == '' && passwordVal == '') {
            $('div#message').html('<p class="login-error">Please enter your email address and password.</p>');
            setError(true);
        }
        else if(emailaddressVal == '') {
            $('div#message').html('<p class="login-error">Please enter your email address.</p>');
            setError(true);
        }
        else if (passwordVal == '') {
            $('div#message').html('<p class="login-error">Please enter a password.</p>');
            setError(true);
        }
        else {
            var serializedData = $('#login').serialize();
            $.ajax({
                type: 'POST',
                url: 'https://www.grindplay.com/front/ajax_login_validation',
                async: false,
                data: serializedData,
                dataType: "json",
                success: function(data, textStatus, errorThrown){
                    if(data.result == 'valid') {
                        $('#login').submit();
                        return true;
                    } else if(data.result == 'already_connected'){
                        /* Redirect the user to MA*/
                        window.location.href = data.redirect_url;
                    } else {
                        var resultHtml = '<p class="login-error">' + data.error_msg + '</p>';

                        $('div#message').html(resultHtml);
                        return false;
                    }
                },
                error: function(qXHR, textStatus, errorThrown){
                    var resultHtml = '<p class="login-error">There was an error please submit form again.</p>';
                    $('div#message').html(resultHtml);
                    return false;
                }
            });
        }
    }

    $('#submit-login-form').on('click', function(e){
        e.preventDefault();
        validate_login();
    });
    $('#submit-password-form').on('click', function(e){
        e.preventDefault();
        doForgotPassword();
    });
</script>
