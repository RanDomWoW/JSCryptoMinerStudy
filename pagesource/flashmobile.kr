	function app_chk() {

		if ($("#ibo_no").val() == "") {
			$("#ret_text").css("color","#ff0000");
			$("#ret_text").text("IBO 번호를 입력해주십시오.");
		}
		else if ($("#ibo_name").val() == "")
		{
			$("#ret_text").css("color","#ff0000");
			$("#ret_text").text("IBO 성명을 입력해주십시오.");
		}
		else
		{
			$("#ibo_submit").hide();
			$("#ibo_checking").show();

			var ajax_url = "/common/ibo_set.html?ibo_id=" + $("#ibo_no").val() + "&ibo_name=" + escape($("#ibo_name").val());

			$.ajax(ajax_url,{

				success:function(data) {

					var arr_data = data.split("|");

					if (arr_data[0] == "SUCCESS")
					{
						location.href = "index.html?" + arr_data[1];
					}
					else
					{
						$("#ret_text").text(arr_data[1]);
						$("#ibo_submit").show();
						$("#ibo_checking").hide();

					}
				}
			});



//			proc_fr.location.href = url;
		}
	}
	function alertMsg(){
		alert('현재 인터넷 데이터 센터 네트워크 장애로 사이트 접속이 불가합니다.\n신속한 복구를 위해 최선의 노력을 다하고 있습니다.\n불편을 끼쳐드려 대단히 죄송합니다\n');
	}
	</script>

