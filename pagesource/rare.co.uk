<!doctype html>
<html ng-app="rare" lang="en" class="{{state.current.name}}-state" ng-class="{ 'no-touch': !$root.isMobile, 'stopScroll': $root.mobileFiltersOpen, 'no-animate': noAnimate }">
	<head>
		<base href="/">



		<title ng-if="!$root.title">Rare</title>
		<title>Rare - {{$root.title}}</title>



		<meta name="fragment" content="!">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">



		<link rel="icon" type="image/png" href="static/img/favicon.png">

		<link rel="stylesheet" href="static/css/app.min.css"/>

		<link rel="stylesheet" href="static/css/fonts.min.css"/>



		<script>var ie9 = false;</script>

		<!--[if IE]>
		<link rel="stylesheet" type="text/css" href="static/css/ie9.css" />
		<script>
			ie9 = true;
		</script>
		<![endif]-->

		<script>
			ie11 = window.ActiveXObject || "ActiveXObject" in window;
		</script>

		<!-- Azure Application Insights - Analytics -->
		<script type="text/javascript">
			// only run if cookie consent is passed
			if (document.cookie.indexOf("MSCC") >= 0) {
				var appInsights=window.appInsights||function(config){
							function r(config){t[config]=function(){var i=arguments;t.queue.push(function(){t[config].apply(t,i)})}}var t={config:config},u=document,e=window,o="script",s=u.createElement(o),i,f;for(s.src=config.url||"//az416426.vo.msecnd.net/scripts/a/ai.0.js",u.getElementsByTagName(o)[0].parentNode.appendChild(s),t.cookie=u.cookie,t.queue=[],i=["Event","Exception","Metric","PageView","Trace"];i.length;)r("track"+i.pop());return r("setAuthenticatedUserContext"),r("clearAuthenticatedUserContext"),config.disableExceptionTracking||(i="onerror",r("_"+i),f=e[i],e[i]=function(config,r,u,e,o){var s=f&&f(config,r,u,e,o);return s!==!0&&t["_"+i](config,r,u,e,o),s}),t
						}({
							instrumentationKey: "810adedc-7345-4eb5-b2e4-d594a63301b2"
						});

				window.appInsights=appInsights;
			}
		</script>
	</head>
	<body ng-controller="viewController" onLoad="initFastButtons();" ng-class="{ 'stopScroll': $root.mobileFiltersOpen, 'ie11': $rootScope.ie11 }" ng-cloak >
		<div class="hider" wd-hide-until-load ng-hide="!show"></div>
		<span id="fastclick">
		<style>
			.burger-color, .burger-color:before, .burger-color:after{
				border-color: {{theme.color}};
			}
			.no-touch #primary-nav a.active-top-link{
				color: {{$root.getLinkTheme(theme.color)}};
			}
		</style>

		<div class="menu-close-side mobile-only" ng-click="$root.toggleMenu()" ng-if="$root.menuOpen"></div>

		<header id="site-header" wd-scale-header>

			<!-- Logo 1: Fixed to the top of page -->
			<div class="wrapper relative" wd-lock-logo wd-fade-on-scroll>
				<div>
					<a tabindex="{{state.current.name === 'home' ? -1 : 0}}" target="_self" ui-sref="home" class="logo-fixed" wd-scroll-on-home-page="0">
						<img class="logo standard-logo ha" ng-src="static/img/logo.png">
						<img class="logo mono-logo ha" ng-src="static/img/mono-logo.png">
					</a>
				</div>
			</div>

			<nav>
				<div class="wrapper relative">
					<div class="burger-hit no-select" ng-click="$root.toggleMenu()" ng-class="{ 'burger-close': $root.menuOpen }">
						<div class="burger-inner">
							<div class="burger" ng-class="{ 'burger-color': $root.isMobile }"></div>
						</div>
					</div>
					<ul id="primary-nav" block-scrolling ng-show="$root.menuOpen">
						<li class="ha"><a tabindex="0" target="_self" ui-sref="news" ng-class="{ 'active-top-link': state.current.name == 'news' || state.current.name == 'newsPost' }">News</a></li>
						<li class="ha"><a target="_self" ui-sref="games" ng-class="{ 'active-top-link': state.current.name == 'games' || state.current.name == 'gamesPost' }">Games</a></li>
						<li wd-expand-menu-item class="expand-item ha">
							<div class="dropdown-btn mobile-only"></div>
							<a target="_self" ui-sref="about" ng-class="{ 'active-top-link': state.current.name == 'about' || state.current.name == 'aboutPost' }">
								About
							</a>
							<ul class="expand-part mobile-only">
								<li><a target="_self" ui-sref="about({a: 'history'})">History</a></li>
								<li><a target="_self" ui-sref="about({a: 'rare'})">Our Values</a></li>
								<li><a target="_self" ui-sref="about({a: 'awards'})">Awards</a></li>
							</ul>
						</li>
						<li wd-expand-menu-item class="expand-item ha">
							<div class="dropdown-btn mobile-only"></div>
							<a target="_self" ui-sref="careers" ng-class="{ 'active-top-link': state.current.name == 'join' || state.current.name == 'joinPost' }">
								Careers
							</a>
							<ul class="expand-part mobile-only">
								<li><a target="_self" ui-sref="careers({a: 'current-jobs'})">Current Jobs</a></li>
								<li><a target="_self" ui-sref="careers({a: 'internships'})">Internships</a></li>
								<li><a target="_self" ui-sref="careers({a: 'benefits'})">Benefits</a></li>
								<li><a target="_self" ui-sref="careers({a: 'speculative'})">Speculative</a></li>
							</ul>
						</li>
						<div class="social-icons social-icons-mobile mobile-only" ng-include="'static/partials/social-icons.html'">

						</div>
					</ul>
				</div>
			</nav>
		</header>

		<div class="mobile-scroll-blocker" ng-if="$root.menuOpen" block-scrolling></div>

		<div class="social-icons transition" wd-fade-before-footer>
			<social-icons no-tab></social-icons>
		</div>

		<!-- non fixed content - used to fix scrolling of home page -->
		<div class="global-wrapper">

			<!-- Logo 2: appears in section 1 on home page -->
			<div class="wrapper relative" wd-lock-logo wd-fade-on-scroll>
				<a tabindex="-1" target="_self" ui-sref="home" class="logo-move ha">
					<img class="logo standard-logo" src="static/img/logo.png" width="46" height="64">
					<img class="logo mono-logo ha" ng-src="static/img/mono-logo.png">
				</a>
			</div>

			<!-- Main View -->
			<div ui-view class="primary-view"></div>


			<footer class="center-text">
				<div class="wrapper">
					<a tabindex="0" scroll-on-focus="5" ng-if="state.current.name === 'home'"></a>
					<div class="footer-icons social-icons">
						<social-icons></social-icons>
					</div>
					<div ng-repeat="section in $root.footer.content.sections">
						<p ng-if="section.id === 'tagline'" ng-bind-html="section.tagline"></p>
						<div ng-if="section.id === 'links'">
							<a target="{{section.links.contact.target || '_blank'}}" ng-href="{{section.links.contact.url}}" class="text-link">{{section.links.contact.value}}</a>
							<a target="{{section.links.terms.target || '_blank'}}" ng-href="{{section.links.terms.url}}" class="text-link" target="_blank">{{section.links.terms.value}}</a>
							<a target="{{section.links.privacy.target || '_blank'}}" ng-href="{{section.links.privacy.url}}" class="text-link" target="_blank">{{section.links.privacy.value}}</a>
						</div>
					</div>
				</div>
			</footer>
		</div>
		<div class="fake-length"></div>
		</span>
		<!-- Scripts -->

		<script type="text/javascript" async src="//platform.twitter.com/widgets.js"></script>


		<script src="static/js/scripts.min.js"></script>

	
		<!-- MSCC COOKIE -->
		<script>

			// cookie banner url
			var cookieBannerUrl = 'https://uhf.microsoft.com/en-GB/shell/api/mscc?domain=rare.co.uk';

			// &mscc_eudomain=true

			// load contents of cookie banner url
			$.getJSON(cookieBannerUrl, function(data) {
			    
			    // run mscc js file
			    var cookieScript = document.createElement('script');
			    cookieScript.type = 'text/javascript';
			    cookieScript.src = data.Js;
			    cookieScript.onload = insertBanner(data);
			    document.head.appendChild(cookieScript);
			});	

			// insert banner after script has loaded
			function insertBanner(data) {

				// add cookie banner and css to page
			    $('body').prepend('<link rel="stylesheet" href="'+ data.Css +'" type="text/css" media="screen" charset="utf-8">');
			    $('body').prepend(data.Markup);

			    // only run if cookie consent is passed
			    if (document.cookie.indexOf("MSCC") == -1) {
			    	$('#site-header').addClass('cookie-banner-active');
			    	$('#site-header nav').addClass('cookie-banner-active');
				}
			}
		</script>
		<!-- /MSCC COOKIE -->


		<script src="static/js/app.min.js"></script>
	</body>
</html>