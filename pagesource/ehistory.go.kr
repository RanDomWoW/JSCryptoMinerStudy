ate, v, t) {	var yy = parseInt(sDate.substr(0, 4), 10);	var mm = parseInt(sDate.substr(5, 2), 10);	var dd = parseInt(sDate.substr(8), 10);	if(t == "d"){		d = new Date(yy, mm - 1, dd + v);	}else if(t == "m"){		d = new Date(yy, mm - 1 + v, dd);	}else if(t == "y"){		d = new Date(yy + v, mm - 1, dd);	}else{		d = new Date(yy, mm - 1, dd + v);	}	yy = d.getFullYear();	mm = d.getMonth() + 1; mm = (mm < 10) ? '0' + mm : mm;	dd = d.getDate(); dd = (dd < 10) ? '0' + dd : dd;	return '' + yy + '-' +  mm  + '-' + dd;}function history_ajax(){	var date = $('#historydate').val();	var yy = date.split('-')[0];	var mm = date.split('-')[1];	var dd = date.split('-')[2];	$(".days .day").text(yy+"."+mm+"."+dd);	$.ajax({		data:{			  mmdd : mm+dd		},		dataType : 'html',		type : 'post',		url : '/main_history_ajax.jsp',		success : function(response, status, request){			if ($.trim(response) == ""){				$("#history_area").html("<img src=\"/resources/images/content/history_no.png\" alt=\"오늘의 역사가 없습니다.\" class=\"history_no\">");			}else{				$("#history_area").html(response);			}		},		error:function(request,status, error){			$("#history_area").html("<img src=\"/resources/images/content/history_no.png\" alt=\"오늘의 역사가 없습니다.\" class=\"history_no\">");		}	});}function popup_e() {	//if (( getCookie( "popup_20141123" ) != "done" ) && fncChkDate("201411240000"))	//if ( getCookie( "popup_160808" ) != "done" ){	if (getCookie("popup_161107") != "done") {		window.open("/page/popup/popup_161107.html","popup","width=400, height=330,left=0,top=0, toolbar=no, location=no, status=no, menubar=no, scrollbars=no, resizable=no");	}}function fncChkDate(pdate) {	var now = new Date();	var year = now.getYear();	var month = now.getMonth() + 1;	var hour = now.getHours(); //시 구하기	var minutes = now.getMinutes()//분 구하기	if (month < 10) {		month = '0' + month;	}	var day = now.getDate();	if (day < 10) {		day = '0' + day;	}	if (minutes < 10) {		minutes = '0' 