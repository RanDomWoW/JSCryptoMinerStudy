<script>
    var now = new Date();
    now.setMonth(now.getMonth() + 12);

    $(function () {
        var cookie = leggiCookie('consenti_cookie');

        if (cookie != "Y") {
            $('#div_cookie').slideDown();
        }

        $('#accetto_cookie').click(function () {

            document.cookie = "consenti_cookie=Y; expires=" + now;

            $('#div_cookie').delay(500).slideUp();

        }); // FINE ON CLICK SU DIV_COOKIE

        $(document).one("scroll", function () {
            document.cookie = "consenti_cookie=Y; expires=" + now;
            $('#div_cookie').delay(3000).slideUp();
        });

    }); // fine document ready

    function leggiCookie(nome) {
        var nameEQ = nome + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1, c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }

