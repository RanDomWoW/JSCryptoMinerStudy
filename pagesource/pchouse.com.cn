<script>
$(".part1,.scrollFrame,.part2,.g-doc,.swiper-container").height($(window).height());
var part2 = document.getElementById("part2");
var isLoad = true;
window.mySwipe = swipe(document.getElementById('Jswiper'), {
	speed: 400,
	vertical: true,
	nav: document.querySelector("#slider div.swipe-nav"),
	callback: function(index, elem) {
		if(index == 0){
			$('.popbg,.popvideo').hide();
			$(".part1").addClass('ani');
		}
		scrollFrame(index);
		$(".nextpage").click(function(){
			window.mySwipe.next();
		});
	}
});
// 滚动条
var myScroll,smallScroll;
document.addEventListener('touchmove', function (e) { e.preventDefault(); }, false);
var scrollbox=document.querySelector(".scrollFrame");
function scrollFrame(index){
	if(index==1&&isLoad){
		myScroll = new IScroll('.scrollFrame',{
			scrollbars: true,
			mouseWheel: true,
			momentum: false,
			click: true
		});
		isLoad = false;
	};
	if(index == 1){
		//判断滚动高度
		scrollbox.addEventListener('touchmove',function(){
			if(myScroll.y>20){
				setTimeout(function(){
					window.mySwipe.prev();
				}, 200);
			}
		},false);
		//内部滚动
		smallScroll = new IScroll('.interview',{
			scrollbars: 'custom',
			mouseWheel: false
		});
	}
}
// 滚动条里面时阻止页面滑动
$(".interview").on("touchstart",function(e){
	$(this).parents(".item").attr("disableSlide","true");
	e.preventDefault();
	return false;
})
// 滚动条外面时移出 禁止页面 滑动属性
$(".interview").on("touchend",function(e){
	$(this).parents(".item").removeAttr("disableSlide");
	e.preventDefault();
})
//impress
window.swipeCnt1 = swipe(document.querySelector('.impress'), {
	speed: 400,
	auto: 6000,
	nav: document.querySelector(".impress div.ctr-swipe"),/*空元素，会自动生成导航*/
	continuous: true
});
//about
window.swipeCnt2 = swipe(document.querySelector('.about'), {
	speed: 400,
	auto: 6000,
	nav: document.querySelector(".about div.ctr-swipe"),/*空元素，会自动生成导航*/
	continuous: true
});
//secret
window.swipeCnt3 = swipe(document.querySelector('.secret'), {
	speed: 400,
	auto: 6000,
	nav: document.querySelector(".secret div.ctr-swipe"),/*空元素，会自动生成导航*/
	continuous: true
});
$(".impress").on("touchstart",function(){
	window.swipeCnt1.stop();
})
$(".impress").on("touchend",function(){
	window.swipeCnt1.start();
})
$(".about").on("touchstart",function(){
	window.swipeCnt2.stop();
})
$(".about").on("touchend",function(){
	window.swipeCnt2.start();
})
$(".secret").on("touchstart",function(){
	window.swipeCnt3.stop();
})
$(".secret").on("touchend",function(){
	window.swipeCnt3.start();
})
//video
var video_play=document.querySelectorAll(".video");
$('.video .cnt').bind("click",function(e){
	var video_img=$('.video img').eq(0),
		video_src=video_img.attr("datavideo"),
		videoHtml="",
		video_poster = video_img.attr("src");
	videoHtml = '<video src="' + video_src + '" poster="' + video_poster + '" preload="preload" autoplay="autoplay" playsinline="true" webkit-playsinline="true" controls="controls" width="100%"></video>';
	$('.popvideo').html(videoHtml);
	$('.popvideo,.popbg').show();
});
$(".popbg").click(function(){
	$('.popbg,.popvideo').hide();
});
//menu
$('.menu').click(function(){
	$(".opacitybg").show();
	$('.showmenu').removeClass('menu-hide').addClass('menu-show');
});
$('.opacitybg').click(function(){
	$(".opacitybg").hide();
	$('.showmenu').removeClass('menu-show').addClass('menu-hide');
});
//拖拽效果
var imageWrap = $('.vfx-image-wrap');
var topImage =$('.before-image');
var divider = $('.divider-bar');
var stayBounce = $('.toggle-function');
imageWrap.on("touchstart",function(){
	$(".movemouse").hide();
})
imageWrap.on("touchmove", function (e) {
	e.preventDefault();
	e.stopPropagation();
	// Gotta localize top image and divider so it only applies to this
	var offsets = $(this).offset(),
	fullWidth = $(this).width(),
	mouseX = e.targetTouches[0].pageX - offsets.left,
	topImage = $(this).find('.before-image'),
	divider = $(this).find('.divider-bar');
	if (mouseX < 0) {
		mouseX = 0;
	} else if (mouseX > fullWidth) {
		mouseX = fullWidth
	}
	$(this).addClass('special');
	divider.css({
		left: mouseX,
		transition: 'none'
	});
	topImage.css({
		width: mouseX,
		transition: 'none'
	});
});
stayBounce.click(function () {
	$(this).toggleClass('stay');
});
imageWrap.on("touchend", function () {
	if (!stayBounce.hasClass('stay')) {
		divider.css({
			left: '50%',
			transition: 'all .3s'
		});
		topImage.css({
			width: '50%',
			transition: 'all .3s'
		});
	}
});
