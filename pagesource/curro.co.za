	<script>
        // Get the modal
var modal = document.getElementById('myModal'); 

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

function div1Visible(){
    document.getElementById('div1').style.display = "block";
    document.getElementById('div2').style.display = "none";
    document.getElementById('div3').style.display = "none";
}

function div2Visible(){
    document.getElementById('div1').style.display = "none";
    document.getElementById('div2').style.display = "block";
    document.getElementById('div3').style.display = "none";
}

function div3Visible(){
    var fullName = document.getElementById('txtFullName');
    var province = document.getElementById('ddlProvince');
    var email = document.getElementById('txtEmail');
    
    if (!fullName.checkValidity())
    {
       document.getElementById('divErrorMessage').innerText = "Name is required"; 
    }
    else if(!province.checkValidity())
    {
        document.getElementById('divErrorMessage').innerText = "Please select province"; 
    }
    else if(!email.checkValidity())
    {
        document.getElementById('divErrorMessage').innerText = "Please enter a valid Email";
    }
    else
    {
        sendEnquiry();
        
        document.getElementById('div1').style.display = "none";
        document.getElementById('div2').style.display = "none";
        document.getElementById('div3').style.display = "block";
    }
}

function resetForm(){
    document.getElementById('div1').style.display = "block";
    document.getElementById('div2').style.display = "none";
    document.getElementById('div3').style.display = "none";
    document.getElementById('txtFullName').value = "";
    document.getElementById('txtEmail').value = "";
    
    modal.style.display = "none";
    
}

function sendEnquiry(){
    var FullName = document.getElementById('txtFullName').value;
    var EmailAddress = document.getElementById('txtEmail').value;
    var TelNum = document.getElementById('txtTel').value;
    var Province = document.getElementById("ddlProvince");
    var ProvText = Province.options[Province.selectedIndex].text;
    
    if(FullName === "" && EmailAddress === "" && ProvText ==="" && TelNum === ""){
        //No data post in form
    }
    else{
        var DataObj = {};
        DataObj.txtFullName = FullName;
        DataObj.txtEmail = EmailAddress;
        DataObj.ddlProvince = ProvText;
        DataObj.txtTel = TelNum;
        //dev url="https://api-dev.curro.co.za/api/curroWebsiteEnquiry"
        //prod url="https://api.curro.co.za/api/curroWebsiteEnquiry"
        $.ajax({
              type: "POST",
              url: "https://api.curro.co.za/api/curroWebsiteEnquiry",
              data: DataObj,
              contentType: "application/x-www-form-urlencoded",
              dataType: "json",
              crossDomain: true,
              success: OnSuccess,
              failure: function(response) {
                   console.log(response.d);
              }
        });
    
        function OnSuccess(result){
           console.log(result.d);
        }
        
        sessionStorage.setItem('helpClick', '1');
    }
    
}

document.getElementById('div1').style.display = "block";
document.getElementById('div2').style.display = "none";
document.getElementById('div3').style.display = "none";

$(document).ready(function () {
    
    var helpClick = sessionStorage.getItem('helpClick');
    if(helpClick === "" || helpClick === null || helpClick === undefined){
        setTimeout(function () { modal.style.display = "block"; }, 3000);
    }

});
</script>
	
	
