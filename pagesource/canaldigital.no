        function setBoxHeight(boxId) {
            var boxHeight = $("div.imageList img.active").height();
            $(boxId).height(boxHeight);

        }

        function setBoxPosition(boxId) {

            var winHeight = $(window).innerHeight();
            var boxHeight = $(boxId).height();
            var marginTop = ((winHeight - boxHeight) / 2) - 10;

            $(boxId).css({
                "margin-left": "auto",
                "margin-right": "auto",
                "margin-top": marginTop
            });

        }

        $(document).ready(function() {
            // run every 7s
            //setInterval("cycleImages()", 3000);
            setBoxPosition("#contentBox");
            setBoxHeight("#contentWrapper");


            $(window).resize(
                function() {
                    setBoxPosition('#contentBox');
                    setBoxHeight("#contentWrapper");
                }
            );

            $("a.readMore").click(
                function() {
                    $("div.moreInfoPopup").dialog({
                        modal: true,
                        dialogClass: "dialogContent",
                        title: "Canal Digital",
                        width: 600,
                        height: 600,
                        closeText: "Lukk",
                        draggable: false
                    });
                }
            );

        })
    </script>
