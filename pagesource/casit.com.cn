<script>
    //栏目url后面参数
    function GetQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]);
        return null;
    }

    $(function () {
        getPageWidth();
        setCurr();
    });

    window.onresize = getPageWidth;
    function getPageWidth() {
        var winW = $(window).width();
        if (winW < 1460) {
            $('.logo2').hide();
        } else {
            $('.logo2').show();
        }
    }

//    加curr
    function setCurr() {
        var navLi = $('.nav>li');
        var $currCode = GetQueryString("parCode");
        if($currCode !== '' && $currCode !== undefined && $currCode !== null){
            $.each(navLi,function () {
                if($(this).attr("data-code") == $currCode){
                        $(this).addClass("curr");
                }
            })
        }else {
            $('.nav li:first-child').addClass("curr");
        }

    }
    //    禁止右键
    document.oncontextmenu = new Function("event.returnValue=false;");



</script>
