<script src="/js/lib/jquery.flexslider-min.js"></script>
<script>

    // 判断屏幕分辨率
    $(function () {
        //首页banner
        renderBanner();
        $(window).resize(function () {
            setPos();
        });
        getData();
    });

    //    核算列表位置
    function setPos() {
        var $h = $(window).height();
        var $w = $(window).width();
        var $h1 = $("#index_banner").height();
        var $h2 = $(".header").height();
        var $h3 = $(".footer").height();
        if ($w < 1400) {
            $(".index_right").css("margin-top", "-50px");
        } else {
            $(".index_right").css("margin-top", ($h - $h1 - $h2 - $h3 - 126) / 2 + "px");
        }
        $("body,html").height($h);
    }


    /**
     * 首页banner
     * */
    function renderBanner() {
        infoApi.getBanner({
            page: 1,
            rows: 10
        }, function (result) {
            if (!result.error) {
                if (result.data.rows && result.data.rows.length > 0) {
                    $("#index_banner").width($(window).width());

                    $('#bannerTempl').tmpl({list: result.data.rows}).appendTo($("#index_banner .slides"));
                    $('#index_banner').flexslider({
                        animation: "slide",
                        direction: "horizontal",
                        slideshowSpeed: 5000,
                        easing: "swing",
                        slideshow: true,
                        pauseOnHover: true,
                        prevText: "",
                        nextText: ""
                    });
                    setTimeout(function () {
                        setPos();
                    }, 100);
                } else {
                    $(".slides").html(tools.NO_DATA);
                }
            } else {
                $(".slides").html(tools.TRY_REFRESH);
            }
        })
    }

    //    读取底部栏目
    function getData() {
        var params = {
            rows: 50
        };
        infoApi.getChannelList(params, function (result) {
            var warp = $(".index_right");
            if (!result.error) {
                if (result.data.rows && result.data.rows.length > 0) {
                    $('#channelListTemp').tmpl({list: result.data.rows}).appendTo(warp);
                } else {
                    warp.html(tools.NO_DATA);
                }
            } else {
                $(".cont_text").html(tools.TRY_REFRESH);
            }
        })
    }

    $(".footer").addClass("footer-new")

</script>
