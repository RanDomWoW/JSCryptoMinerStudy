		<script type="text/javascript">
			var HostUrl = "https://host.ns365.net/";
			var DomainUrl = "https://domain.ns365.net/";
			var MailUrl = "https://mail.ns365.net/";
			var CloudUrl = "https://xcloud.ns365.net/";

			$(function () {
				var loginSubmit = $('#login-submit'),
						loginForm = $('.login-form').find('form'),
						loginInput = loginForm.find('input').not('[type=hidden]'),
						loginType = $('#actionType'),
						navList = $('#nav'),
						icon = $('.icon-form');

				function Validator() {
					var _state = true,
							_tipText = {
								domainname:'请输入您的域名',
								password:'请输入您的密码',
								valicode:'请输入验证码'
							};
					return {
						checkDomainName:function () {
							var _self = loginInput.eq(0);
							if (_self.val() === '') {
								_state = false;
								_self.next('.login-tip').text(_tipText[_self.attr('name')]).show();
							} else {
								_self.next('.login-tip').hide();
							}
							return this;
						},
						checkPwd:function () {
							if (!_state)
								return this;
							var _self = loginInput.eq(1);
							if (_self.val() === '') {
								_state = false;
								_self.next('.login-tip').text(_tipText[_self.attr('name')]).show();
							} else {
								_self.next('.login-tip').hide();
							}
							return this;
						},
						checkCode:function () {
							if (!_state)
								return _state;
							var _self = loginInput.eq(2);
							if (_self.val() === '') {
								_state = false;
								_self.nextAll('.login-tip').text(_tipText[_self.attr('name')]).show();
							} else {
								_self.nextAll('.login-tip').hide();
							}
							return _state;
						}
					}
				}

				/*
				 loginSubmit.on('click', function(e) {
				 e.preventDefault();
				 var validator = new Validator();
				 if (validator.checkDomainName().checkPwd().checkCode()) {


				 $.post(loginUrl['url'], loginForm.serialize(), function(msg) {
				 if (msg.status == 200) {
				 window.location.replace(msg.url);
				 } else {
				 alert(msg.info);
				 }
				 });

				 }
				 });
				 */

				navList.on('click', 'li', function (e) {
					e.preventDefault();
					var _self = $(this),
							action = _self.children('a').attr('data-action');
					_self.addClass('active').siblings().removeClass('active');
					loginType.val(action);
					icon.removeClass().addClass('icon-form').addClass('icon-' + action);
					loginUrl = getUrl();
					$('#post_form').attr("action", loginUrl['url']);
					imageCode();
				});

				// append gov info
				if (window.location.protocol === 'http:') {
					$('.gov-info').html('<iframe src="http://wljg.gdgs.gov.cn/lz.ashx?vie=41BEF320E537FBF556AE6B4BA41F3D9AE8797E797A8AFC5C8C74D1BB54370F67DDDC66F6CB2668D76FFE37304B043532" allowtransparency="true" scrolling="no" style="overflow:hidden;" frameborder="0"></iframe>');
				}
			});

			/** 获取不同站点信息*/
			function getUrl()
			{
				actionUrl = "index.php/Index/login";
				imageUrl = 'index.php?m=Index&a=verify';
				loginName = $('#actionType').val();
				loginArray = new Array();
				switch (loginName)
				{
					case 'webmaster':
						loginUrl = HostUrl;
						break;
					case 'domainmaster':
						loginUrl = DomainUrl;
						break;
					case 'dnsmaster':
						loginUrl = DomainUrl;
						break;
					case 'postmaster':
						loginUrl = MailUrl;
						break;
					case 'mysqldbmaster':
						loginUrl = HostUrl;
						break;
					case 'mssqldbmaster':
						loginUrl = HostUrl;
						break;
					case 'cloudmaster':
						loginUrl = CloudUrl;
						break;
					default:
				}
				loginArray['url'] = loginUrl + actionUrl;
				loginArray['imageurl'] = loginUrl + imageUrl;
				return loginArray;
			}

			function imageCode() {
				var Rand = Math.random();
				loginUrl = getUrl();
				//alert(loginUrl['url']);
				//alert(loginUrl['imageurl']);
				$(".imageCode").attr({
					src:loginUrl['imageurl'] + '&t=' + Rand
				});
			}



		</script>




	</body>
