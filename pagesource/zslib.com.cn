		<script type="text/javascript" src="js/list.js"></script>
		<script>
			localuid = '';
			
			window.onload=function(){
					
				document.loginfrm.screen_width.value=screen.width;
				document.loginfrm.screen_height.value=screen.height;
				if(localuid && typeof(localuid) != 'undefined' && localuid != ''){	
					document.loginfrm.uid.value=localuid;
					if(document.loginfrm.rememberuid){
						document.loginfrm.rememberuid.checked = true;
					}
				}
				
				setTimeout(function(){
					var scookie = document.cookie;
					
					var sscookies = scookie.split(';');
					var tmsidFlag = false;
					
					if(sscookies){
						for(var x in sscookies){
							
							var temps = sscookies[x];
							var tempKV = temps.split('=');
							if(tempKV.length = 2){
								sname = tempKV[0];		
								sname && sname.trim && sname.trim();
								svalue = tempKV[1];
								svalue && svalue.trim && svalue.trim();
							}
							
							if(sname == 'uid'){
								if(svalue != 'undefined'){					
								  localuid = svalue;
								}
							}
							//用于判断从 dojoweb后退到登陆页 
							if(sname == 'tmsid'){
								var tmsidFlag = true;
								
								var f = document.getElementById('lof');
								f.src = "tmw/"+svalue+"/mailmain?type=logout";
							}
						}
					}
					
					//用于判断从 dojoweb后退到登陆页 ，
					if(!tmsidFlag){
						document.getElementById('lof').src = 'about:blank';
					}
				}, 0);
			};
		
	        DocURL=document.URL;
	        startlen = 12;
	       
	        serverIndex=DocURL.lastIndexOf("http://mail.");
	       
	        if(serverIndex < 0){
	        	startlen = 11;
	        	serverIndex=DocURL.lastIndexOf("http://www.");
	        	if(serverIndex < 0){
		            serverIndex=DocURL.lastIndexOf("http://");
		            startlen = 7;
		            if(serverIndex < 0){
			            	serverIndex = DocURL.lastIndexOf("https://");
			            	if(serverIndex >= 0){
			            		serverIndex =DocURL.indexOf("https://mail.");
			            		startlen =13;
			            		if(serverIndex < 0){
									serverIndex=DocURL.lastIndexOf("https://www.");
			        	            startlen = 12;
			        	            if(serverIndex < 0){
			        	            	serverIndex = 0;
			    	               		startlen = 8;
			        	            }
			            		}	            		
			            	}else{
			               		serverIndex = 0;
			               		startlen = 7;
			            	}
		            }
	            }
	        } 
	        
	        istart = serverIndex+startlen;
	        serverEnd=DocURL.indexOf(":",istart);       
	        if(serverEnd < 0)
	           serverEnd=DocURL.indexOf("/",istart);
	       
		    if(serverEnd >0){
		        cww=DocURL.substring(serverIndex+startlen,serverEnd);          
		    }else{
		        cww = DocURL.substring(serverIndex + startlen);         
		    }
	      
	        if(cww.indexOf("localhost")!=-1){
	           cww = "";
	        }
	        
	        if(cww.indexOf("/")!=-1){
	           cww = "";
	        }
		      
			function setDomain()
			{	
				document.loginfrm.domain.value=cww;
			}
			function getpassword(){
				window.location.href="getpassword.jsp?username="+document.loginfrm.uid.value+"&domain="+document.loginfrm.domain.value;
			}
			
			function regusers()
			{
				window.location.href="reguser.jsp";
			}
			
			function maintlogin()
			{
				window.location.href="maintlogin.jsp";
			}
			
			function reloadVerifyCode() {
			    var timenow = new Date().getTime();                        
			    document.getElementById("safecode").src ="randomnumber?time=" + timenow;
			}
		</script>
