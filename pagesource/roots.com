<script type="text/javascript">
		function createCookie(name,value,days) {
	       if (days) {
	              var date = new Date();
	              date.setTime(date.getTime()+(days*24*60*60*1000));
	              var expires = "; expires="+date.toGMTString();
	        }
	        else var expires = "";
	        document.cookie = name+"="+value+expires+"; path=/";
		 }

		
		function readCookie(name) {
		       var nameEQ = name + "=";
		       var ca = document.cookie.split(';');
		       for(var i=0;i < ca.length;i++) {
		              var c = ca[i];
		              while (c.charAt(0)==' ') c = c.substring(1,c.length);
		              if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
		       }
		       return "";
		}
		
		window.onload = function() {
			var siteid;
			
		    if (window.jQuery) {
				jQuery('.siteidLlnks a span.country-name').click(function() {
				    if (readCookie("SiteID") == "") {
				        createCookie('SiteID', jQuery(this).closest('a').attr('href'), 365);
				    }
				});
		    } else {
		    	siteid = document.querySelector('.siteidLlnks a');

		    	if(siteid !== null) {
		    		siteid.addEventListener("click", function() {
					    if (readCookie("SiteID") == "") {
					        createCookie('SiteID', siteid.getAttribute('href'), 365);
					    }		    		
			    	});
		    	}
		    }
		};
</script>
