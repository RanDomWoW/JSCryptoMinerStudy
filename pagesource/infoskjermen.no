<script>    
  $(function(){
    chat_closed = 1 //0 eller 1
    now = new Date()  
    month = pad(now.getUTCMonth() + 1)
    day = now.getDay()
    //Sommertid begynner siste søndag i mars og slutter siste søndag i oktober når vi går tilbake til normaltid.
    if ([4,5,6,7,8,9,10].includes(month)) {
      offset = 2 
    } 
    else { 
      offset = 1  
    }  
    hours = now.getUTCHours() + offset
    minutes = now.getUTCMinutes()
    time = pad(hours)+":"+pad(minutes)
    officedays = [1,2,3,4,5] //mandag,tirsdag,onsdag,torsdag,fredag  
    opens = []
      opens[1] =   "08:00" //åpner mandag
      opens[2] =   "08:00" //åpner tirsdag
      opens[3] =   "08:00" //åpner onsdag
      opens[4] =   "08:00" //åpner torsdag
      opens[5] =   "08:00" //åpner fredag
    closes = []
      closes[1] =  "15:30" //stenger mandag
      closes[2] =  "15:30" //stenger tirsdag
      closes[3] =  "15:30" //stenger onsdag
      closes[4] =  "15:30" //stenger torsdag
      closes[5] =  "14:00" //stenger fredag
    if (chat_closed == 0 && officedays.includes(day) && time >= opens[day] && time < closes[day] ){
    }
    else{
      $('.chat').hide()
      $('.mail').show()
    }
  })
  function pad(n) {
      return (n < 10) ? ("0" + n) : n;
  }
  $('#pre_olark_button').click(function(){
    $('#pre_olark_button').fadeOut();
    $.getScript('/javascripts/olark_nb.js');
  });
</script>
