<script type="text/javascript" src="js/swfforcesize.js"></script>
<script type="text/javascript">		
	function callBack(args){
		if(args["success"]){	
			var forceSize = new SWFForceSize(args["ref"],960,540);
			forceSize.onLoadDiv();
		}else{
			
		location.href = "home.html";
	}
	}
	var fvars = {};
	var params = {
		bgcolor:"#000000",
		scale:"noScale",
		salign:"lt",
		quality:"high",
		allowScriptAccess:"sameDomain"
	};
	var attributes = {
		id:"flashContent",
		name:"flashContent"
	}
	var isAndroid = (navigator.userAgent.match(/Android/i));
	var isiPhone = (navigator.userAgent.match(/iPhone/i));
	var isiPad = (navigator.userAgent.match(/iPad/i));
	//iPhone&iPad&Android
	if(isAndroid || isiPhone || isiPad){
		location.href = "home.html";
	} else {
		swfobject.embedSWF("main.swf","flashContentInner","100%","100%","8.0.0","js/expressInstall.swf",fvars,params,attributes,callBack);
	}
</script>
</head>

