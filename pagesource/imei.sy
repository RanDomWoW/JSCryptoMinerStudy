<script>
  window.onload = function() {

    /*
    *  Clear inline style of sidebar when screen size <= 800
    */
     function checkWidth() {
        var windowsize = window.innerWidth;
        if (windowsize < 801) {
            document.getElementsByClassName("sidebar")[0].style.right="";
        }
      }
      checkWidth();

    /*
    *  Detect Resize for responsiveness.
    */
    window.addEventListener('resize',checkWidth  );


    /*
    *  Clear old Status on new IMEI input.
    */
    document.getElementById("imei").addEventListener('input', function(){     clearSts();    });

    function clearSts() {
      document.getElementById("rslt").textContent = "";
    }


    /*
    *  Chcek Sidebar position.
    */
    function isaside(){
      var element = document.getElementsByClassName("sidebar")[0];
      return (element.offsetTop =="0");
    }

    /*
    * Focus on input feild on load.
    */
    document.getElementById("imei").focus();


    function ShowSidebar(){
      var ok = isaside();
      if(ok){
        document.getElementsByClassName("sidebar")[0].style.right="0";
      }
      checkWidth();
    }

    function HideSidebar(){
      var ok = isaside();
      if(ok){
        document.getElementsByClassName("sidebar")[0].style.right="-25%";
      }
      checkWidth();
    }

    /*
    * Bind 'mouseover' and 'mouseout' to all elments with 'tohover' Class.
    */
    var els = document.getElementsByClassName("tohover");
    [].forEach.call(els, function (el) {
      el.addEventListener('mouseover',function(){
          ShowSidebar();
      });
      el.addEventListener('mouseout',function(){
          HideSidebar();
      });
    });


    document.getElementById("helpicon").addEventListener('click',function(){
      var ok = isaside();
      ShowSidebar();
      if(!ok){
        document.getElementsByClassName("sidebar")[0].scrollIntoView();
      }
    });


  }

</script>