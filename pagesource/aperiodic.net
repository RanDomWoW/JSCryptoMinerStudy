<html>
  <head>
    <title>Aperiodic</title>
    <!-- Hi, there!  Are you ready for some unorthodox OpenLayers usage? -->
    <!-- You should see how I generated the tiles... -->
    <script src="/OpenLayers.js"></script>
    <script type="text/javascript">
        var tiles;
        function init() {
            tiles = new OpenLayers.Map ("tiles", {
                controls:[new OpenLayers.Control.Navigation({zoomWheelEnabled: false, zoomBoxEnabled: false, documentDrag: true})],
                maxExtent: new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34),
                maxResolution: 156543.0399,
                numZoomLevels: 17,
                units: 'm',
                projection: new OpenLayers.Projection("EPSG:900913"),
                displayProjection: new OpenLayers.Projection("EPSG:4326")
            } );
            tiles.addLayer(new OpenLayers.Layer.XYZ("aperiodic", "http://tiles.aperiodic.net/penrose/${z}/${x}/${y}.png", {numZoomLevels: 14, sphericalMercator: true}));
            if( ! tiles.getCenter() ){
                var lonLat = new OpenLayers.LonLat(0, 0).transform(new OpenLayers.Projection("EPSG:4326"), tiles.getProjectionObject());
                tiles.setCenter(lonLat, 13);
          }
        }
    </script>
    <style type="text/css">
        .olImageLoadError {
            opacity: 0 !important;
            filter: alpha(opacity=0) !important;
        }
    </style>
  </head>
 
  <body onload="init();">
    <div style="width:100%; height:100%" id="tiles"></div>
  </body>
  
</html>