<script type="text/template" id="tmp_visualize">
	<div id="visualization" class="clearfix <%= pageClass %>" style="width:<%= pageWidth %>px;">
		<% function isSelected(tag, c) { 
			if (highlight==tag) { 
				print( (!!c) ? ' '+c : ' selected' ); 
			}
		}; %>
		<div class="page<% isSelected('maxWidth') %>" style="width:<%= pageWidth %>px;"><span><%= pageWidth %></span></div>
		<div class="margin<% isSelected('margin') %>" style="width:<%= margin %>px;"><span><%= margin %></span></div>
		<% _(columns-1).times(function() { %>
			<div class="column<% isSelected('column');  %>" style="width:<%= colWidth %>px;"><span class="clearfix"><%= colWidth %></span></div>
			<div class="gutter<% isSelected('gutter'); isSelected('columns','outline'); %>" style="width:<%= gutter %>px;"><span class="clearfix"><%= gutter %></span></div>
		<% }); %>
		<div class="column<% isSelected('column') %>" style="width:<%= colWidth %>px;"><span class="clearfix"><%= colWidth %></span></div>
		<div class="margin<% isSelected('margin') %>" style="width:<%= margin %>px;"><span><%= margin %></span></div>
		<div class="marginBottom"></div>
	</div>
</script>

<script type="text/template" id="tmp_metrics">
	<div class="metric">Page width: <b class="<%= pageClass %>"><%= pageWidth %> px</b></div>
	<div class="metric">Column width: <b><%= colWidth %> px</b></div>
</script>

<script type="text/template" id="tmp_metrics_error">
	<span class="error">Yikes! The numbers don't add up!<br /> Try to tweak the digits.</span>
</script>


