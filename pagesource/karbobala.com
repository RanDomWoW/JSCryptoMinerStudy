<script>
  $(document).foundation({dropdown: {}});

  var click_on_menu = false;
  $(document).ready(function () {
    $('.user-login-menu').click(function () {
      click_on_menu = true;
    })
    $('html').click(function () {
      if (click_on_menu === false) {
        $('#user-login-register-dropdown').removeClass('open');
      }
      click_on_menu = false;
    });


    $('#user-login-form').on("submit", function () {
      var CaptchaDisplay = $('#login-input-captcha').css('display');
      var remember_me = $(this).find('#input-username-remember-me').prop('checked');
      var isRemember = 0;
      if (remember_me) {
        isRemember = 1;
      }
      if (CaptchaDisplay != 'none') {
        if ($('#captcha-login').val() == "") {
          notification("error", "لطفاً متن داخل تصویر را وارد نمایید.");
          return false;
        }
        notification("wait", "لطفا منتظربمانید ...");
      }
      notification("wait", "لطفا منتظربمانید ...");
      $.ajax({
        url: $(this).attr("action"),
        dataType: "json",
        type: "post",
        data: {
          login: $("#user_name_login").val(),
          password: $("#password_login").val(),
          remember: isRemember,
          captcha: $("#captcha-login").val()
        },
        success: function (data) {
          if (data.error == "max-attempt") {
            notification("error", data.msg);
            $(".user-login-register-dropdown").stop().animate({height: "450px"}, "fast", function () {
              $('#login-img-captcha').fadeOut('fast',function () {
                $(this).html(data.captcha).fadeIn('fast');
              });
              $('#login-input-captcha').fadeIn();
            });
          } else if (data.error == "not-active-user") {
            $("#activate-popup").foundation("reveal", "open");
            notification('fade');
          } else {
            notification(data.error, data.msg);
            if (data.error == "success") {
              document.location.reload();
            }
          }
        }

      });
      return false;
    });
  });

</script>
