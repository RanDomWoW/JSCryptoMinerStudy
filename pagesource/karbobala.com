<script>
    var userWaiting = 0;
    setInterval(function(){ userWaiting++; }, 1000);

    // current fired link for analytics
    $(document).on("mousedown", 'a[data-analytic]', function(e) {
      // detect mouse wheels
      if( e.which <= 2 ) {
//        alert('test');
        var $this = $(this);
        var a_title = $this.text().trim();
        // a link
        var a_link = $this.attr('href');
        // remove base url to prevent redundency
        a_link = a_link.replace(base_url, '');
        // analytic parent
        var $parent = $this.parents('[data-analytic-box]');
        // persian name of parent box name
        var box_name = $parent.data('ana-fa');
        // parent box id
        var box_id = $parent.attr('id');
        // current section
        var section = 'index';
        // get current page url
        var pathname = window.location.pathname; // Returns path only
        var url = window.location.href; // Returns full URL
        url = url.replace(base_url, '');
        
        // save data witch link was clicked
        $.ajax({
          url: base_url + 'analytics/fired_link',
          data: {
            link: a_link,
            title: a_title,
            box_name: box_name,
            box_id: box_id,
            position_x: $this.position().left,
            position_y: $this.position().top,
            section: section,
            current_url: url,
            userWaiting: userWaiting
          },
          dataType: 'json',
          type: 'get',
//          success: function(result){
//            console.log(result);
//          },
//          error: function(error){
//            console.log(error);
//          }
        });
      } // end of if
      else {
        // active right click event(display popup menu)
        popUp.start(this);
      }
    });


    // when user leave the page
    $( window ).unload(function() {
      var url = window.location.href; // Returns full URL
      url = url.replace(base_url, '');

      $.ajax({
        url: base_url + 'analytics/leave_page',
        data: {
          url: url
        },
        dataType: 'json',
        type: 'get',
        success: function(result){
//          console.log(result);
        },
        error: function(error){
//          console.log(error);
        }
      });
//      console.log('');
      return "Bye now!";
    });
</script>
