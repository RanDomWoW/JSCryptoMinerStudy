          setTimeout(function () {
            img.width(img.width() + (img.width() % 2))
            img.attr('width', img.width());
            img.attr('height', img.height());
          }, 1000);
        }).each(function () {
          if (img[0].complete)
            img.load();
        });
      });
    });
  });
