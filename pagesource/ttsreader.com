<script type="text/javascript">
    
    if (window.firebase) {
        var uiConfig = {
            callbacks: {
                signInSuccess: function (currentUser, credential, redirectUrl) {
                    
                    console.log("signInSuccess callback in config called");
                    closeDialog();
                    onSignInSuccess();

                    
                    
                    return false; 
                },
                uiShown: function () {
                    
                }
            },
            signInSuccessUrl: 'https://ttsreader.com',
            signInFlow: "popup",
            signInOptions: [
                
                firebase.auth.GoogleAuthProvider.PROVIDER_ID,



                firebase.auth.EmailAuthProvider.PROVIDER_ID,

            ],
            
            tosUrl: 'https://ttsreader.com/blog/2017/05/10/ttsreader/'
        };

        
        var ui = new firebaseui.auth.AuthUI(firebase.auth());
        
        ui.start('#firebaseui-auth-container', uiConfig);
    }

    initApp = function() {
        
        firebase.auth().onAuthStateChanged(function(user) {
            if (user) {
                
                console.log("onAuthStateChanged sign-in");
                window.user = user;
                updateSignInUi();
                var displayName = user.displayName;
                var email = user.email;
                var emailVerified = user.emailVerified;
                var photoURL = user.photoURL;
                var uid = user.uid;
                var phoneNumber = user.phoneNumber;
                var providerData = user.providerData;
                user.getIdToken().then(function(accessToken) {
                    
                });
                
                if (localStorage.getItem("isPremium")=="true") {
                    localStorage.setItem("isNewPremium","false");
                    retainUserData("isPremium","true",true);
                }

                
                syncPremiumIfTrueFromFirebase();
            } else {
                
                console.log("onAuthStateChanged sign-out");
                window.user = null;
                updateSignInUi();
                localStorage.setItem("shouldCloudSync","false");
                if (window.syncCheckbox) {
                    syncCheckbox.checked = false;
                }
                
                if (localStorage.getItem("isPremium")=="true" && localStorage.getItem("isNewPremium")=="true") {
                    localStorage.setItem("isNewPremium","false");
                    invokeSignInDialog();
                }
            }
        }, function(error) {
            console.log(error);
        });
    };

    window.addEventListener('load', function() {
        if (window.firebase) {
            initApp();
        }
    });

    function onSignInSuccess() {
        var userId = firebase.auth().currentUser.uid;
        firebase.database().ref('/users/' + userId).once('value').then(function(snapshot) {
            if (snapshot.val()) {
                
                
                
            } else {
                
                var key = 'createdAt';
                firebase.database().ref('users/' + userId + '/' + key).set(firebase.database.ServerValue.TIMESTAMP);
                uploadAllDataToFirebase(); 
            }

            
        });
    }

    function uploadAllDataToFirebase() {
        syncToFirebase();
    }

    function updateSignInUi() {
        if (window.user) {
            
            document.getElementById('signinBtn').style.display = 'none';
            document.getElementById('userMenuBtn').style.display = 'block';
        } else {
            
            document.getElementById('signinBtn').style.display = 'block';
            document.getElementById('userMenuBtn').style.display = 'none';
        }
    }
    
    function signout() {
        firebase.auth().signOut().then(function() {
            console.log('Signed Out');
        }, function(error) {
            console.error('Sign Out Error', error);
        });
    }


    function setUserPremium() {
        localStorage.setItem('isPremium','true');
        retainUserData('isPremium',true,true);
        setPremiumUi();
    }



    function retainUserData(key,value,forceCloudSync) {
        value = '' + value; 
        
        if (window.firebase) {
            if (firebase.auth().currentUser &&
                (forceCloudSync || localStorage.getItem("shouldCloudSync")=="true")) {
                var userId = firebase.auth().currentUser.uid;
                firebase.database().ref('users/' + userId + '/' + key).set(value);
            }
        }

        localStorage.setItem(key, value);
    }

    function removeUserData(key, forceCloudSync) {
        
        if (window.firebase) {
            if (firebase.auth().currentUser &&
                (forceCloudSync || localStorage.getItem("shouldCloudSync")=="true")) {
                var userId = firebase.auth().currentUser.uid;
                firebase.database().ref('users/' + userId + '/' + key).remove();
            }
        }

        localStorage.removeItem(key);
    }

    function invokeSignInDialog() {
        
        ui.start('#firebaseui-auth-container', uiConfig);
        invokeDialog('signinDialog');
    }

    document.getElementById('signoutBtn').addEventListener('click',signout);
    document.getElementById('signinBtn').addEventListener('click',invokeSignInDialog);
    document.getElementById('upgradePremiumBtn').addEventListener('click',invokePremiumDialog);
    document.getElementById('closeDialogBtn').addEventListener('click',closeDialog);

    function syncToFirebase() {
        for (var iProperty in KEYS) {

            
            if (!KEYS.hasOwnProperty(iProperty) || iProperty=="isPremium") {
                continue;
            }

            
            var iKey = KEYS[iProperty];
            retainUserData(iKey,localStorage.getItem(iKey),true);
        }

        
        
        var numberOfChapters = getNumberOfChapters();
        if (numberOfChapters) {
            for(var i=0; i<numberOfChapters; i++) {
                var iKey = chapterIndexToStorageKey(i);
                var iValue = localStorage.getItem(iKey);
                if (!iValue) {
                    iValue = "";
                }
                retainUserData(iKey,iValue,true);
            }
        }

    }

    function syncPremiumIfTrueFromFirebase() {
        if (firebase.auth().currentUser) {
            var userId = firebase.auth().currentUser.uid;
            firebase.database().ref('/users/' + userId + '/isPremium').once('value').then(function (snapshot) {
                if (snapshot.val() == "true" || snapshot.val() == true) {
                    setUserPremium();
                }
            });
        }
    }

    function syncFromFirebase() {
        
        if (firebase.auth().currentUser) {
            var userId = firebase.auth().currentUser.uid;
            firebase.database().ref('/users/' + userId).once('value').then(function (snapshot) {
                for (var iProperty in KEYS) {
                    
                    if (!KEYS.hasOwnProperty(iProperty)) continue;

                    
                    var iKey = KEYS[iProperty];
                    var iValueToStore = "" + snapshot.val()[iProperty];
                    localStorage.setItem(iKey, iValueToStore);
                }

                
                
                var numberOfChapters = getNumberOfChapters(snapshot.val());
                if (numberOfChapters) {
                    for(var i=0; i<numberOfChapters; i++) {
                        var iKey = chapterIndexToStorageKey(i);
                        var iValue = snapshot.val()[iKey];
                        if (!iValue) {
                            iValue = "";
                        }
                        localStorage.setItem(iKey,iValue);
                    }
                }

                
                loadUserPrefs();
            });
        } else {
            invokeSignInDialog();
        }
    }

    function getNumberOfChapters(object) {
        var isBookOn = false;
        var totalNumberOfChapters = 0;
        var currentChapterIndexInApp = null;

        if(!object) {
            
            isBookOn = localStorage.getItem(KEYS.isBookOn);
            totalNumberOfChapters = localStorage.getItem(KEYS.totalNumberOfChapters);
            currentChapterIndexInApp = localStorage.getItem(KEYS.currentChapterIndexInApp);
        } else {
            
            isBookOn = object[KEYS.isBookOn];
            totalNumberOfChapters = object[KEYS.totalNumberOfChapters];
            currentChapterIndexInApp = object[KEYS.currentChapterIndexInApp];
        }

        if (totalNumberOfChapters!=null && currentChapterIndexInApp!=null) {
            totalNumberOfChapters = parseInt(totalNumberOfChapters);
            currentChapterIndexInApp = parseInt(currentChapterIndexInApp);

            if (isBookOn=='true' && totalNumberOfChapters>0) {
                return totalNumberOfChapters;
            }
        }

        return 0;
    }

    function isSignedIn() {
        if (firebase.auth().currentUser) {
            return true;
        } else {
            return false;
        }
    }

    if(isPremium()) {
        setUserPremium();
    }

</script>


    
    

