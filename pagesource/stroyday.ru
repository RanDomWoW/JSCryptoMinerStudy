$('#header-menu li:eq(0)').addClass('firstli');
$('#header-menu>li:eq(1)').addClass('secondli');
$('#header-menu>li:eq(2)').addClass('thirdli');
$('#header-menu>li:eq(3)').addClass('forli');

firstsub = $('#header-menu li:eq(0)').find('.sub-menu');
secondsub = $('#header-menu>li:eq(1)').find('.sub-menu');

$('.firstli').mouseenter(function(){
    $('.insert_block').hide();
    $('.secondli').removeClass('mactive');
    $(this).addClass('mactive');
    $('ul.sub-menu').removeClass('sub-active');
    $(this).find('.sub-menu').addClass('sub-active');
    secondsub.hide();
    firstsub.show();
    $('.insert_block').fadeIn(300);
    $('.zakaz_remonta').text('Заказ строительства');
});

$('.secondli').mouseenter(function(){
    $('.insert_block').hide();
    $('.firstli').removeClass('mactive');
    $(this).addClass('mactive');
    $('ul.sub-menu').removeClass('sub-active');
    $(this).find('.sub-menu').addClass('sub-active');
    firstsub.hide();
    secondsub.show();
    $('.insert_block').fadeIn(300);
    $('.zakaz_remonta').text('Заказ ремонта');
});

$('.thirdli,.forli').mouseenter(function(){
    $('.insert_block').hide();
    $('#header-menu li').removeClass('mactive');
    $('ul.sub-menu').removeClass('sub-active').hide();
});

$('.insert_block').mouseenter(function(){
    $('.sub-active').show();
});

//ajax
$('.navi>li').mouseenter(function(){
    var path = $(this).find('a').attr('href');
    
    if($(this).hasClass('mactive')){
        $.get('https://stroyday.ru/wp-content/themes/stroyday/php/ajax.php?urls='+path, function(result){
            $('.insert_result').html(result);
        });
    }
});

$('.insert_block').mouseleave(function(){
   $(this).hide();
   $('li').removeClass('mactive');
   $('.firstli .sub-menu,.secondli .sub-menu').hide();
});

$('.container').mouseleave(function(){
   $('.insert_block').hide();
   $('li').removeClass('mactive');
   $('.firstli .sub-menu,.secondli .sub-menu').hide();
});

