<script type="text/javascript">
var tmpl_cache     = [];

jQuery(document).ready(function($){
	//jQuery('#maximage').maximage();
	
	var random = 1;

	if( random === 1){
		$("body").addClass("random");
	}


	function openPopup(elem){
		var winWidth = $( window ).width();
		var winHeight = $( window ).height();
		var popupWidth = elem.outerWidth();

		
		var popupLeft = winWidth / 2 - popupWidth / 2;
		var popupHeight = winHeight - 200;
		var container = elem.find($('.container'));

		elem.css("left", popupLeft);
		elem.fadeIn();
	}
	
	hrefFunction = function(){
		var url = window.location.hash;
		var hash = url.split('#')[1];
		if (typeof hash === "undefined") return;
		$(".popup").fadeOut(); //скрываем все дивы
		var that = '#'+hash;
		if (hash){
			if (!tmpl_cache[hash]){
				$.ajax({
					async: true,
					cache: false,
					type: "GET",
					url: "/static//"+ hash +"/" + Math.random(),
					dataType: "html",
					success: function(data) {
						tmpl_cache[hash] = data;
						openPopup($(that));
						$(that).find(".popup-container").html(data);
					}
				});
			}else{
				$(that).find(".popup-container").html(tmpl_cache[hash]);
				openPopup($(that));
			}
		}

	}
	
	hrefFunction();
	
	var hashHandler = function (event) { 
		hrefFunction();
	}

/*
	if ("onhashchange" in window) {
		window.addEventListener("hashchange", hashHandler, false);
	}
*/
	
	if(window.addEventListener) {
		window.addEventListener("hashchange", hashHandler, false);
	} else {
		window.attachEvent('onhashchange', hashHandler);
	}
	
	/**** ВЫЗОВ функций на разные линки*/
	$(".close").click(function() {
		$(this).parent(".popup").fadeOut();
	});


	$(".login-buttons .ok").click(function() {
		$(".ok-step").fadeIn();
	});

	$(".ok-step-no").click(function() {
		$(".dialog-if-yes").fadeOut(
			function(){
				$(".dialog-if-no").fadeIn();
			}
		);

	});


});
</script>
