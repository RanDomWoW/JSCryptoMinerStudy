<script type="text/javascript">
	/*jslint unparam: true */
	/*global window, $ */
	var aviso = false;
	var boxes = 0;
	var inProcces = 0;
	$(function () {
		'use strict';
		$('#fileupload').fileupload({
			url: 'upload.php',
			dataType: 'json',
			maxNumberOfFiles: 99,
			maxFileSize: 3145728,
			acceptFileTypes: '/(\.|\/)(gif|jpe?g|png)$/i',
			send: function (){
				if (!$('#accept-tos > input[type=checkbox]:checked').length) {
					if (!aviso) {
						alert('Debe aceptar los terminos y condiciones');
						aviso = true;
						setTimeout(function(){ aviso = false; }, 1000);
						return false;
					}
				}
				$('#progress .progress-bar').removeClass('progress-bar-success');
					inProcces ++;
			},
			progressall: function (e, data) {
				$('.progress').show();
				$('#error_message').hide();
				var progress = parseInt(data.loaded / data.total * 100, 10);
				$('#progress .progress-bar').css('width',progress + '%');
			},
			done: function (e, data) {
				//clean progress bar
				var progressDone = parseInt(data._progress.loaded / data._progress.total * 100, 10);
				$('#progress .progress-bar').css('width',progressDone + '%');
				//show thumbnail and urls
				var msg = data.result;
				var html = '\
					<div id="uploadify'+boxes+'" class="uploadifyQueueItem">\
						<a target="_blank">\
							<img width="75" height="75" border="0" class="preview" src="static/img/noimg.png" />\
						</a>\
					</div>';
				$('#fileQueue').append(html);
				var tooltip = '\
					<div class="tooltip">\
						<label>\
							Enlace directo\
							<input type="text" name="direct" value="'+msg.embed+'" />\
						</label>\
						<label>\
							BBCode\
							<input type="text" name="bbcode" value="[img='+msg.direct+']" />\
						</label>\
						<div class="dialog"></div>\
						<ul class="share">\
							<li><a href="https://twitter.com/home?status='+msg.embed+'" target="_blank" class="twitter">Twitter</a></li>\
							<li><a href="https://www.facebook.com/sharer.php?u='+msg.embed+'" target="_blank" class="facebook">Facebook</a></li>\
						</ul>\
					</div>';
				$('#uploadify'+boxes).append(tooltip);
				$('#uploadify'+boxes+' > a').attr('href', msg.embed);
				$('#uploadify'+boxes+' > a > img.preview').attr('src', msg.direct);
				var bbcode = Array(), direct = Array();
				$('input[type=text][name=bbcode]').each(function(){
					bbcode.push($(this).val());
				});
				$('input[type=text][name=direct]').each(function(){
					direct.push($(this).val());
				});
				$('#bbcode_all').val(bbcode.join('\n')).css('height', document.getElementById('bbcode_all').scrollHeight+'px');
				$('#direct_all').val(direct.join('\n')).css('height', document.getElementById('direct_all').scrollHeight+'px');
				$('.panel').show();

				//reset loader
				boxes ++; //increment boxes ids
				if(progressDone == 100 && boxes >= inProcces){
					$('#progress').fadeOut(1200);
						//$('#progress .progress-bar').addClass('progress-bar-success');
					} else {
						$('#progress .progress-bar').css('width','0%');
					}
			},
			fail: function (e, data){
				$('#progress').hide();
				$('#error_message').html("An error occurred: " + data.jqXHR.statusText).show();
				boxes ++;
			}
		}).prop('disabled', !$.support.fileInput)
			.parent().addClass($.support.fileInput ? undefined : 'disabled');
	});
	$('a.switch').bind('click', function(){
		var obj = $(this).parent().parent('div.panel');
		if ($(obj).hasClass('flip')) {
			$(obj).removeClass('flip');
		} else {
			$(obj).addClass('flip');
		}
	});
</script>
