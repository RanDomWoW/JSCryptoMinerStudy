

<html>
<head>
<script>
    var createCookie = function (name, value) {
        var expires;

        var date = new Date();
        date.setTime(date.getTime() + (1332403882588));
        expires = "; expires=" + date.toGMTString();

        document.cookie = name + "=" + value + expires + "; path=/";
    }

    function getCookie(c_name) {
        //document.cookie.split(';').filter(terms => terms.split('=')[0].trim() == 'l')
        if (document.cookie.length > 0) {
            cookies = document.cookie.split(';');
            if (cookies.length > 0) {
                cookie = cookies.reduce((acc, current) => {
                    if (acc === '') {
                        terms = current.split('=');
                        if (terms[0].trim() === c_name) {
                            return terms[1];
                        }
                    }
                    return acc;
                }, '');
            }
        }
        return '';
    }

    function setupLanguage() {

        //get cookie
        var lang = getCookie("l");

        if (lang === "") {
            //add default cookie
            createCookie("l", "pt");
            //then go to pt homepage
            window.location.href = "/pt/homepage/";
        } else {
            //go to homepage
            window.location.href = "/" + lang + "/homepage/";
        }

    }


</script>

    <title>Liga Portugal</title>
</head>

