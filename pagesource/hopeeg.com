            $close.hide();
            $name.empty();
            stapel.closePile();
        } );

        if($('.title-text').length > 0){
             $('.title-text').matchHeight();           
        }
    
    } );
    function sendmsg() {
        var data = $('#contacform').serialize();
       
        $.ajax({
            url:"https://www.hopeeg.com/pages/send",
            method: "post",
            data: data
        }).done(function( msg ) {
            var res = jQuery.parseJSON(msg);
            console.log(res)
            if(res.type == 'error'){
                $('#contacform-error').html(res.msg);
                $('#contacform-error').show();
                setTimeout(function(){
                    $('#contacform-error').hide();
                    }, 6000);
            }else{
                document.getElementById("contacform").reset();
                $('#contacform-sucsses').html(res.msg);
                $('#contacform-sucsses').show();
                setTimeout(function(){
                    $('#contacform-sucsses').hide();
                }, 6000);
            }
        });
    }
