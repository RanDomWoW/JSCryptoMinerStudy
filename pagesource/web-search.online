    <script>
        var $search_input = $("#search__input");
        var $search_form = $("#search__form");

        function isUrl(str) {
            var a  = document.createElement('a');
            a.href = str;
            return (a.host && a.host != window.location.host);
        }

        $(".logo").click(function()
        {

            $(".logo").removeClass("active");

            var parent = $(this);
            parent.addClass("active");

            $search_input.attr("name", parent.data("search-name"));
            if(!parent.hasClass("google_search_bar"))
                $search_form.addClass("hide-suggestions");
            else
                $search_form.removeClass("hide-suggestions");

            $search_form.attr("action", parent.data("search-url"));

        });

        $search_form.submit(function(e)
        {
            e.stopPropagation();
            e.preventDefault();

            $.post(
            {
                url: "https://direkt-wissen.com/websearch/save_query",
                type: "POST",
                data:
                    {
                        q: $search_input.val()
                    },
                dataType: "json"
            }).success(function()
            {
                if(isUrl($search_input.val()))
                {
                    e.stopPropagation();
                    e.preventDefault();
                    window.location.href = ($search_input.val());
                }
            });

            $(this).unbind('submit').submit();
        });

        $(document).on('keydown', function(e) {

            var keyCode = e.keyCode || e.which;

            if (keyCode != 9)
                return;

            e.preventDefault();
            e.stopPropagation();

            var curr_focus = $(':focus');

            if(!curr_focus.is(".suggestion a"))
            {
                $(".suggestion a").first().focus();
                return;
            }
            var next = $(curr_focus).parent(".suggestion").next();
            if(!next.is(".suggestion"))
            {
                $(".suggestion a").first().focus();
                return;
            }
            next.find("a").first().focus();
        });

        $search_input.on("input paste", function()
        {
            var parent = $(this);
            var search_query = parent.val();

            $.post(
            {
                url: "https://direkt-wissen.com/websearch/search",
                type: "POST",
                data:
                {
                    q: search_query,
                    key: "4b4LM4If94IwS9PK8nMbAbsiNvh19bW0LSna4uu6RGfqzyfh2dU6juIeGX6PypVh",
                },
                dataType: "json"
            }).success(function(data)
            {
                var length = data.length;

                if(length == 0)
                    hideSuggestions();
                else
                    loadSuggestions(data);
            });

        });

        var $suggestion_wrapper = $("#suggestion_wrapper");

        function hideSuggestions()
        {
            $suggestion_wrapper.hide();
        }

        function loadSuggestions(suggestions)
        {
            $suggestion_wrapper.show();
            $suggestion_wrapper.html("");
            $.each(suggestions, function(i, suggestion)
            {
                $suggestion_wrapper.append("<div class='suggestion'><a href='" + suggestion.link + "'><img src='" + suggestion.img_url + "'><span class='text'>" + suggestion.text + "</span></a></div>");
            });
        }

    </script>
