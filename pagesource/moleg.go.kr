<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ko" lang="ko">
<head>
<title>법제처 홈페이지</title>
<meta http-equiv="X-UA-Compatible" content="IE=7" />
<meta http-equiv="Content-Type" content="text/html;charset=euc-kr" />
<meta http-equiv="Cache-Control" content="No-Cache" />
<meta http-equiv="Pragma" content="No-Cache" />
</head>
<body>

<script type="text/javascript">
//<![CDATA[

var molegMain  = "http://www.moleg.go.kr/main.html";
var molegIn    = "http://in.moleg.go.kr/index.mo";
var mobileMain = "http://m.moleg.go.kr/mobile/";

var targetDomain=window.location.href.match(/:\/\/(.[^/]+)/)[1];
var mobileKeyWords = new Array('iPhone', 'iPod', 'BlackBerry', 'Android', 'Windows CE', 'LG', 'MOT', 'SAMSUNG', 'SonyEricsson');
var isMobile = 0;

if(targetDomain.match("m.moleg.go.kr") != null) {
    window.location = mobileMain;
} else { // when new.moleg.go.kr or moleg.go.kr

    if ( document.referrer.match("m.moleg.go.kr") != null ) {
        window.location = molegMain;
    } else {
        //if ( document.referrer != "" ) {
	if ( document.referrer.match("moleg.go.kr") != null ) {
	    if(targetDomain.match("in.moleg.go.kr") != null ) {
               window.location = molegIn;
	    } else {
               window.location = molegMain;
	    }
        } else {

            for (var word in mobileKeyWords){
                if (navigator.userAgent.match(mobileKeyWords[word]) != null){
                    if (navigator.userAgent.match("GT-P7510") != null) {   // 갤럭시 탭 10.1
                        location.href = molegMain;
                        break;
                    }
                    isMobile = 1;
                    location.href = mobileMain;
                    break;
                }
            } // End of for

            if( !isMobile ) {
	        if(targetDomain.match("in.moleg.go.kr") != null ) {
                   window.location = molegIn;
	        } else {
                   window.location = molegMain;
	        }
            }
        }
    }
}

//]]>
</script>

