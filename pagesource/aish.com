<script language="javascript">
function place_obj( box, popupNum )
	// Places an HTML object in the user's browser, relative to the offset location of the
	// top-left of the content on his page. (Adapted from similar function in popupBox.js,
	// itself adapted from function copied from the Web.) popupNum records which number
	// popup this is - each one is given a larger offset than the previous, in case the
	// user opens multiple ones.
{
	var obj = document.getElementById( "canvas" );
	var cleft = 0;
	var ctop = 0;
	while (obj.offsetParent) {
		cleft += obj.offsetLeft;
		ctop += obj.offsetTop;
		obj = obj.offsetParent;
	}
	cleft += ( ( popupNum - 1 ) * 17 );
	ctop += 20 + ( ( popupNum - 1 ) * 24 );
	box.css( "left", cleft + 'px' );
	if (document.body.currentStyle &&
		document.body.currentStyle['marginTop']) {
		ctop += parseInt(
		document.body.currentStyle['marginTop']);
	}
	box.css( "top", ctop + 'px' );
}

function RecordDailyWinOpen( popupNum )
	// Contact dogood to tell it a popup win was opened. Adapted from SilentSignUp() in EmailSignUp.js.
{
	var myFields, num;
			num = popupNum;
		myFields = 'id=' + num;
	try {
		var xmlDoc = new XMLHttpRequest()
		xmlDoc.open( 'POST', "http://dogood.aish.com/counter/daily_popups.php", true );
		xmlDoc.setRequestHeader( 'Content-Type','application/x-www-form-urlencoded' );
		xmlDoc.send( myFields );
	} catch(e) {
		try {
			var xmlDoc = new ActiveXObject('Microsoft.XMLHTTP')
			xmlDoc.open( 'POST', "http://dogood.aish.com/counter/daily_popups.php", true );
			xmlDoc.setRequestHeader( 'Content-Type','application/x-www-form-urlencoded' );
			xmlDoc.send( myFields );
		} catch(e1) {
			var xmlDoc = new window.XDomainRequest(); 
			xmlDoc.open( 'GET', "http://dogood.aish.com/counter/daily_popups.php?" + myFields, false );
			xmlDoc.send( null );
		}
	}
}

function BringToTop( popupNum ) 
	// Bring the current window to the top.
{
	var i;
	for ( i=1; i<=4; i++ ) {
		(function(i) {
		if ( i == popupNum ) {
			$("#popup"+i).css( "zIndex", "12" );
		} else {
			$("#popup"+i).css( "zIndex", "11" );
		}
		})(i);
	}
}

function showPopUp( popupNum )
	// Open a pop-up window with the expected ID value.
{
	var popupWin = $("#popup"+popupNum);
			var x = popupWin;
	place_obj( x, popupNum );
			if ( x.css( "display" ) == "none" ) {
			// Skips extra presses of this win.
			RecordDailyWinOpen( popupNum );
		}
		x.css( "display", "block" );
			BringToTop( popupNum );
	}

function HidePopUp( popupNum ) 
{
	$("#popup"+popupNum).css( "display", "none" );
	return false;
}

// Following var's and functions adapted from http://www.hunlock.com/blogs/Javascript_Drag_and_Drop, provid-
// ing drag & drop functionality for the popup windows.
var savedTarget=null; // The target layer (effectively vidPane)
var dragOK=false;     // True if we're allowed to move the element under mouse
var dragXoffset=0;    // How much we've moved the element on the horozontal
var dragYoffset=0;    // How much we've moved the element on the verticle

function moveHandler(e)
{
	if (e == null) { e = window.event }
	if (e.button<=1&&dragOK) {
		savedTarget.style.left=e.clientX-dragXoffset+'px';
		savedTarget.style.top=e.clientY-dragYoffset+'px';
		return false;
	}
}

function cleanup(e)
{
	document.onmousemove=null;
	document.onmouseup=null;
	dragOK=false;
}

function dragHandler(e)
{
	if (e == null) { e = window.event; htype='move';}
	var target = e.target != null ? e.target : e.srcElement;
	if ( target.id.indexOf("imap") == 0 ) {
		// This is the 1st part of the image map which controls the top-bar of a moveable win.
		savedTarget = document.getElementById( "popup"+ target.id.charAt(4) );
		// Arg passed to getElem() is the name of the containing window of this top-bar.
		dragOK=true;
		dragXoffset=e.clientX-parseInt(savedTarget.style.left);
		dragYoffset=e.clientY-parseInt(savedTarget.style.top);
		document.onmousemove=moveHandler;
		document.onmouseup=cleanup;
		return false;
	}
}

document.onmousedown=dragHandler;
</script>


