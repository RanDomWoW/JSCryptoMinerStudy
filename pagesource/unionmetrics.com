<script type="text/javascript">
  (function($) {
    //Temp: Remove modal and send to demo request page
    $("a[data-reveal-id].contactSalesButton")
      .attr("href","/demo-request/")
      .unbind();

    // GA event tracking
    $("a[data-ga-event],input[data-ga-event],button[data-ga-event]").click(function(e) {
      var args = $(this).data("ga-event").split(/\s*,\s*/);
      if(args.length < 4) {
        args = args.concat(new Array(4-args.length));
      }
      for(var i=0; i<args.length; i++) {
        if(args[i] != null && args[i].trim().length == 0) {
          args[i] = null;
        }
      }
      ga("send","event",args[0],args[1],args[2],args[3])
    });

    // Salesforce modal
    $("#contactSalesModal").on("submit",function(evt) {
      evt.preventDefault();
      var modal = $(this);
      var f = $(this).find("form")
      // serialize won't serialize a button and wp needs this, so add a
      // a surrogate hidden field with the same name as the button
      var submit = f.find("input[type=submit]")
      f.append('<input type="hidden" name="'+submit.attr("name")+'" value="'+submit.attr("value")+'">');
      var params = f.serialize();
      // Set button state after serialization so it won't interfere
      submit.val("Submitting...").attr("disabled")
      $.ajax({
        type: "POST",
        url: f.attr("action"),
        data: params,
        success: function(data) {
          var response = $(data).find(".salesforce_w2l_lead")
          modal.find(".salesforce_w2l_lead").replaceWith(response)
          if(response.find(".success_message").length > 0) {
            // Succeeded... wait and close the modal
            setTimeout(function() {
              modal.foundation('reveal','close')
            },2000)
          }
        }
      });
    });

    var idSeed = Math.round(Math.random()*10000000);
    $(".screenshot-swapper *[data-screenshot]").each(function(i,e) {
      var eLastImg = $(e).
        parents(".screenshot-swapper").
        find(".screenshot img:last-of-type");
      var imgId = "screenshot-"+idSeed+"-"+i;
      $(e).data("img-id",imgId);
      var srcSet = $(e).data('screenshot')
      var src = srcSet.split(/\s*,\s*/)[0].split(/\s+/)[0];
      eLastImg.after(
        '<img src="'+src+'" srcset="'+srcSet+'" style="display:none;" id="'+imgId+'">'
      );
    });

    $(".screenshot-swapper *[data-screenshot]").mouseenter(function(evt) {
      var $toShow = $("#"+$(this).data("img-id"));
      $(this).
        parents(".screenshot-swapper").
        queue("sfx",function(next) {
          $(this).find(".screenshot img:visible").hide();
          next();
        }).queue("sfx",function(next) {
          $toShow.fadeIn(400);
          next();
        }).dequeue("sfx");
    });

    $(window).on("load",function() {
      var match = window.location.href.match(/module=([^&]+)/);
      if(match && match.length >= 2) {
        var module = match[1];
        var $section = $(".module-"+module);
        if($section.length > 0) {
          $('html, body').animate({scrollTop: $section.offset().top - 50}, 1500);
        }
      }
    });

    $(".toast__close").click(function() {
      $(this).parents(".toast").slideUp();
    });
  })(jQuery)
</script>

