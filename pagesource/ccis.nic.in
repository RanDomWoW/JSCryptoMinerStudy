		hash2 = hex_md5(trim(document.frmLogin.hidRand.value) + hash1)
		document.frmLogin.Tadka.value = hash2
		document.frmLogin.txtPassword.value = ""
		document.frmLogin.action = "LoginCheck.asp"
		document.frmLogin.submit()
	end if	
end sub

