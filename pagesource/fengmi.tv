        function resetBtn() {
            var btn = document.getElementById('getcheckcode');
            window.clearInterval(btn.st);
            btn.st = false;
            btn.value='获取验证码';
            btn.parentElement.classList.add('select');
            btn.setAttribute('onclick','disenbleBtn()');
        }
        function numberSec() {
            var btn = document.getElementById('getcheckcode');
            if (btn.sec > 0) {
                btn.sec = btn.sec - 1;
                btn.value=btn.sec+'秒后重新获取';
            } else {
                resetBtn();
            }
        }
        function btnNumberSec() {
            var btn = document.getElementById('getcheckcode');
            btn.value = '60秒后重新获取';
            btn.sec=60;
            btn.setAttribute('onclick','');
            btn.st = setInterval(function () {
                numberSec();
            }, 1000);
        }
        function typeToAction(type) {
            return type == 1 ? "backpwd" : "reg";
        }

        // todo::本页面有效请求短信下方函数
        function disenbleBtn() {
            //ajax
            var mobile = $('#mobile').val();
            var type   = $('#type').val();
            action = typeToAction(type);
            if(mobile){
                $.post("/user/getCode", { mobile: mobile, type: type , action: action},
                    function(ret){
                        if(ret.code >= 200 && ret.code < 300) {
                            $.getJSON(ret.data.url+'&callback=?', function(json){
                                var msg = json.msg ? json.msg : json.info.msg;
                                if(json.status == 1){
                                    btnNumberSec();
                                } else {
                                    var btn=document.getElementById('getcheckcode');
                                    btn.st = true;
                                    btn.value = '获取验证码';
                                    btn.setAttribute('onclick','');
                                    $('.getnumber').removeClass('select');
                                }
                                $('.fm-regnext').find('.error-tipspas span').html(msg);
                                $('.fm-regnext').find('.error-tipspas span').parent().show();
                            });
                        } else {
                            var btn=document.getElementById('getcheckcode');
                            btn.st = true;
                            btn.value = '获取验证码';
                            btn.setAttribute('onclick','');
                            $('.getnumber').removeClass('select');
                            $('.fm-regnext').find('.error-tipspas span').html(ret.msg);
                            $('.fm-regnext').find('.error-tipspas span').parent().show();
                        }
                    }, 'json');
            }
        }

        function nextBtnClick() {
            var code = $('#code').val();
            var mobile = $('#mobile').val();
            var type   = $('#type').val();
            var action = typeToAction(type);
            if (code != '' && mobile != '' && type) {
                $.post("/user/checkCode", { mobile : mobile, code : code, type: type, action: action},
                    function(ret){
                        if(ret.code >= 200 && ret.code < 300){
                            $(".fm-regnextpas").addClass('current');
                            $(".fm-regnext").removeClass('current');
                        } else {
                            $(".regin-pressnext").removeClass('current');
                            $('.fm-regnext').find('.error-tipspas span').html(ret.msg).parent().show();
                        }
                    }, 'json');
            } else {
                $(".regin-pressnext").removeClass('current');
                if (mobile == '') {
                    $('.fm-regnext').find('.error-tipspas span').html('').html('请填写手机号').parent().show();
                    return false;
                }
                var myreg = /^(((1[0-9]{2})|(15[0-9]{1})|(18[0-9]{1}))+\d{8})$/;
                if (!myreg.test(mobile)) {
                    $('.fm-regnext').find('.error-tipspas span').html('').html('请输入有效的手机号码！').parent().show();
                    return false;
                }
                if (code == '') {
                    $('.fm-regnext').find('.error-tipspas span').html('').html('请填写验证码').parent().show();
                    return false;
                }
            }
        }

