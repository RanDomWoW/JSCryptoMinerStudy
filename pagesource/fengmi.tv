        function enbleBtn(o) {
            if (o.value.length == 11) {

                try {
                    $('.getnumber').addClass('select');
                    resetBtn();
                } catch (e) {
                }
            } else {
                var btn=document.getElementById('getcheckcode');
                $('.getnumber').removeClass('select');
                btn.st = true;
                btn.value = '获取验证码';
                btn.setAttribute('onclick','');

            }
