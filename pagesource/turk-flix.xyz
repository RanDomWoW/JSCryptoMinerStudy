                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
                <script type="text/javascript">
                $(document).ready(function(){
                    $("#sppsubmit").click(function(){
                        $(this).val("Please wait...").prop("disabled", true);
                        var sppUsername = jQuery("#sppuser").val();
                        var sppPassword = jQuery("#spppass").val();
                        jQuery.ajax({
                            type: "POST",
                            url: "https://www.turk-flix.xyz/wp-content/plugins/site-password-protect/inc/ajax.php",
                            data: { sppuser: sppUsername, spppass: sppPassword},
                            success: function(data, status) {
                                   if(data == "error"){
                                      Cookies.set("spp", "71a16ed2d4c0531acf76af5a793a0638", { expires: 1 });
                                      $("#loginerror").html("<p>Incorrect username / password.</p>").show();
                                      $("#sppsubmit").val("Login").prop("disabled", false);
                                   } else {          
                                     var exDate = new Date();
                                     exDate.setTime(exDate.getTime() + (120 * 60 * 1000));                  
                                      Cookies.set("spp", data, { expires: exDate }); 
                                      $("#loginerror").html("").hide();
                                      location.reload();
                                   }                                
                            }
                        });
                    });
                });</script>