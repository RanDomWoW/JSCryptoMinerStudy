    function marquee(){
        var dad=document.getElementById('dad');
        var n=dad.querySelectorAll('a').length;
        var dadTop=dad.style.top;
        if(n>1){
            if(dad.style.top=='-'+(n-1)*108+'px'){
                dad.style.top='0';
            }else {
                dad.style.top=parseInt(dadTop)-108+"px";
            }
        }
    }
    var MyMar=setInterval(marquee,3000)
    dad.onmouseover=function() {clearInterval(MyMar)};
    dad.onmouseout=function() {MyMar=setInterval(marquee,3000)};
    //随机位置
    function cb(id) {
        var n=Math.floor(Math.random()*10);
        var cb=document.getElementById(id);
        var cbName=cb.className;
        if(n<=3){
            cb.className=cbName+' cube';
        }else if(n>3 && n<=6){
            cb.className=cbName+' cube01';
        }else {
            cb.className=cbName+' cube02';
        }
    }
