	function scaleVideo() {
	
jQuery('[data-videojs-auto-height]').each(function(){

	var $el = jQuery(this);
console.log($el);
	var aspectRatio = $el.attr('data-videojs-auto-height');
	var t = jQuery.type( aspectRatio );
    
	if ( t !== 'string' && t !== 'number' ) {
        return;
	}
	else if ( t === 'string' && /\d+\:\d+/.test( aspectRatio ) ) { 
        aspectRatio = aspectRatio.match(/(\d+)\:(\d+)/);
        aspectRatio = aspectRatio[1] / aspectRatio[2];
        aspectRatio = 1 / aspectRatio;
    }

    $el.parent()
       .css("padding-top", aspectRatio * 100 + "%")
       .addClass("auto-height");

});	
	
