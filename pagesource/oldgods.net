<script language="JavaScript1.2">
function createButton(name,title,desc,uri) {
  var s = "";
  var qname = "\""+name+"\"";
  // create the title text
  var titleText = "<p class='title' id='"+name+"-title'><a class='title' href='"+uri+"' onmouseover='javascript:buttonOver("+qname+");' onmouseout='javascript:buttonOut("+qname+");'>"+title+"</a></p>";
  // create the description text
  var descText = "<p class='desc' id='"+name+"-desc'>"+desc+"&nbsp;</p>";
	// create the title row
  s=s+"<tr><td id='"+name+"-a' bgcolor='#C0C0C0'>&nbsp;&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>"+titleText+"</tr></td>";
  // add the description row
  s=s+"<tr><td></td><td></td><td>"+descText+"</tr></td>";
  // wrap it in the container table
  s = "<tr><td><table border='0' cellpadding='0' cellspacing='0'>" + s + "</td></tr></table>";
  // write the output
  document.write(s);
}

function buttonOver(name) {
	// get the DOM nodes
  var titlePara = document.getElementById(name+"-title");
  var titleCell = document.getElementById(name+"-a");
  var descPara = document.getElementById(name+"-desc");
	// change the title cell colour
  titleCell.style.backgroundColor = "#6666C0";
  descPara.style.color = "#333399";
}

function buttonOut(name) {
	// get the DOM nodes
  var titlePara = document.getElementById(name+"-title");
  var titleCell = document.getElementById(name+"-a");
  var descPara = document.getElementById(name+"-desc");
	// change the title cell colour
  titleCell.style.backgroundColor = "#C0C0C0";
  descPara.style.color = "#999999";
}
</script>

