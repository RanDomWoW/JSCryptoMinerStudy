<script>
$(function () {
    $('#fileupload').fileupload({
        dataType: 'json',
		url: '/upload',
		progressall: function (e, data) {
			var progress = parseInt(data.loaded / data.total * 100, 10);
			$('#progressbar').show().children('.donebar').css({width:progress + '%',marginLeft:0}).parent().children('.label').html(progress+'%');
		},
		fail: function(e, data) {
			alert('unbekannter Fehler! Bitte erneut versuchen.');
		},
        done: function (e, data) {
			if(data.result.errors!=null && data.result.errors.length) {
				$('#progressbar').hide();
				var $errmsg = $('<p class="error"></p>');
				$('#progressbar').after($errmsg);
				$.each(data.result.errors, function (index, error) {
					$errmsg.append('<span style="color:red">Fehler! <strong>'+error.file+'</strong> konnte nicht hochgeladen werden. ('+error.code+')</span><br />');
				});
				setTimeout(function() { $errmsg.fadeOut(500); }, 10000);
			}
			else {
				$('#progressbar').children('.donebar').animate({marginLeft:'100%'},200,function() {
					setTimeout(function() { $('#progressbar').fadeOut(200); },500);
				});
				var $scsmsg = $('<p></p>');
				$('#progressbar').after($scsmsg);
				$.each(data.result.files, function (index, file) {
					$scsmsg.append('<span style="color:green">Datei <strong>'+file.name+'</strong> hochgeladen und sicher verschlüsselt. Vielen Dank!</span><br />');
				});
				setTimeout(function() { $scsmsg.fadeOut(500); }, 10000);
			}
        }
    });
	
	$('#triggerSend').click(function(){
		var $button = $(this);
		$button.prop('disabled',true).text('sende ... bitte warten!');
		$.post('/send',$('[name=msg]').serialize(),function(response){
			if(response=='done') $('#msgcontainer').html('<p style="color:green">Mitteilung erfolgreich verschlüsselt und sicher versendet. Vielen Dank!</p>');
			else{
				$button.prop('disabled',false).text($button.attr('placeholder'));
				var $errmsg = $('<p style="color:red;">Unbekannter Fehler! Bitte erneut versuchen.</p>');
				$button.parent('p').before($errmsg);
				setTimeout(function(){$errmsg.fadeOut(300)},2000);
			}
		});
	});
	
	$('.tabs li').click(function(){
		var $li = $(this);
		var idx = $li.index();
		$('.tabs li').removeClass('active').eq(idx).addClass('active');
		$('.tabcontainer').hide().eq(idx).show();
	});
	
	$('.tabs li').eq(0).trigger('click');
	
});
</script>
