<!-- Uploader -->
<script type="text/javascript">
var from = "";
$(document).ready(function() {
	if(from == "home-upload")
		hideUpload();
	else
		hideRemote();
});

if(!$.browser.msie){
	$('input[type="radio"]').on('click', function(e) {
		$('#radio-prive').val($(this).val());
	});

	jQuery(function($){
		$('.fileUpload').fileUploader({
			autoUpload: false,
			limit: 1,
			buttonUpload: '#px-submit',
			buttonClear: '#px-clear',
			singleOptions: '#singleOptions',
			buttonSelect: '#select-files',
			statutAttente: 'En attente',
			statutEnCours: 'En cours',
			onFileChange: function(e, form) {	
				$('.ajaxBottom').hide();				
 				$('.namefile').quickfit({'truncate':true});
 				$('#message-erreur').empty().hide('#message-erreur');
			},
			onLimitError: function(e) {
				var nbMultiMax = 1;
				if(nbMultiMax > 1) {
					$('#message-erreur').html('Vous ne pouvez envoyer que '+nbMultiMax+' images simultanément.').show()
				} else {
					$('#message-erreur').html('Vous ne pouvez envoyer qu\'une image simultanément. <a href="inscription">Inscrivez-vous pour en envoyer plus.</a>').show()
				}
			},
			onValidationError: function(e) {
				$('#message-erreur').html(e.name + " n'est pas un format valide, veuillez utiliser une image.").show();
			},
			afterUpload: function(e) {
				$.getJSON('includes/multi.php', function(data) {
					if(data.redirect != 'undefined') {
						$(location).attr('href',data.redirect);
					} else {
						$('#message-erreur').html('Un problème est survenu...');
					}
				});
			}
		});
	});
}

if($.browser.msie)
	$('noscript').hide();

$('.fileUpload').on('change', function(){ 
	if($(this).val() != '')   		
		$('.ajaxBottom input, .ajaxBottom button').removeAttr('disabled');

});

$('#px-submit').on('click', function() {
	$(this).prev().hide();

	$loader = $('<div style="text-align:center"><img src="style/images/loading-upload.gif" /></div>');

	$(this).hide().after($loader);

});

function hideUpload() {
		$('#px-widget-1').fadeOut().hide();
		if($.browser.msie)
			$('#uploadForm').fadeOut().hide();
		$('#remote').fadeIn('fast').show();      	
	$('#lienRemote').hide();
	$('#lienLocal').show();
	$('#px-clear').fadeOut().hide();
	$('#DADpromo').hide();
}

function hideRemote() {
    $('#remote').fadeOut().hide();
		$('#px-widget-1').fadeIn('fast').show();       		
		if($.browser.msie)
			$('#uploadForm').fadeIn().show();
	$('#lienLocal').hide();
	$('#lienRemote').show();
	$('#px-clear').css('display', 'inline-block');
	$('#DADpromo').show();
}

// function isUrl(string) {
//     var reg = new RegExp("^(http(s)?://)?[a-z0-9-]+(.[a-z0-9-]+)*(:[0-9]+)?(/.*)?$", "i");
//     return reg.test(string);
// }

$('#remote input[name="link"]').on('keypress paste', 
 function() {
  var $that = $(this);
  setTimeout(function () {
      var text = $that.val();
      if(text.length ) {
    $('#remote').find('input, button').not('input[name="link"]').removeAttr('disabled');
   }
    }, 4);

 }
);

//Clic sur le lien remote
$("#lienRemote").on('click', function()
{
	var value = $('#remote').find('input[name=link]').val();
	if(value == '' && $.browser.msie )
		$('#remote').find('input[name=link]').val('Exemple : http://www.zupmage.eu/image.png');
	
		hideUpload();
		if(value == '' || value == 'Exemple : http://www.zupmage.eu/image.png') {
			$('#remote').find('input, button').not('input[name="link"]').attr('disabled', 'disabled');      			
		}         	
	return false;
});

$('input[name=link]').on('click', function(){
	value = $(this).val();
	if(value == 'Exemple : http://www.zupmage.eu/image.png' && $.browser.msie)
		$(this).val('');
	if(value == '' && $.browser.msie)
		$(this).val('Exemple : http://www.zupmage.eu/image.png');        
});

//Clic sur le lien contact
$("#lienLocal").on('click',function()
{          	
		hideRemote();          	
	return false;
}); 

$('#remote').change(function(){
          var url = 'includes/remoteUpload.php?whatisd=' + $('#remote').val();
          $.ajax({
       url: url,
       success: function(data) {
     $('#description').val(data);
      }
    });
});

