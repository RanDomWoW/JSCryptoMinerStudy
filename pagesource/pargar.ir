    <script>
        function smartBannerhide() {
            document.getElementById("smart-banner").className = "hide";
        }

        function closeCat() {
            setTimeout(function() {
                var elem = document.getElementById("cat-dropdown");
                var index = elem.className.indexOf("m-hide");
                var index2 = elem.className.indexOf("clicked");
                if ((index == -1) && (index2 == -1)) {
                    elem.className += "m-hide";
                }
            }, 10)

        }

        function recalcCarouselWidth(carousel) {
            var stage = carousel.find('.owl-stage');
            stage.width(Math.ceil(stage.width()) + 1);
        }

        $(window).on('resize', function(e) {
            recalcCarouselWidth($('.owl-carousel'));
        }).resize();

        $('.wm-carousel').on('refreshed.owl.carousel', function(event) {
            recalcCarouselWidth($('.owl-carousel'));
        });
        $(document).ready(function() {
            $('[data-toggle=tooltip]').hover(function() {
                $(this).tooltip('show');
            }, function() {
                $(this).tooltip('hide');
            });
        });
    </script>
