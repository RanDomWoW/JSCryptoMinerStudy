	<script>
	
	var overlay_windows = {
		error_message_window: {
			open: false
		},
		tc_code_window: {
			open: false
		},
		login_window: {
			open: false
		},
		close_other_session_window: {
			open: false
		},
		ipc_regions_window: {
			open: false
		},
		message_window: {
			open: false
		},
		paywall: {
			open: false,
			reopen: false
		}
	};
	
	
	$(function(){
		initOverlay();
		
		setInterval(function(){
			checkOverlay();
		}, 10000);
	});
	
	
	function checkOverlay(){
		var overlay_content = $('#overlay_content');
		if(!overlay_content[0]){
			$('body').append('<div id="overlay_content"></div>');
		}
		var overlay = overlay_content.find('.overlay');
		if(overlay[0]){
			$.each(overlay_windows, function(k, v){
				var pw = $('#'+k);
				if(!pw[0]){
					initOverlay();
					return false;
				}
				if(v.open && pw.is(':hidden')){
					openPopupWindow(pw);
				}
			});
		}
		else{
			initOverlay();
		}
	}
	
	
	function initOverlay(){
		$.ajax({
			url: '/ajax/ajax.php',
			type: 'post',
			data: {
				type: 'template',
				action: 'out',
				path: '/modules/default/overlay_content.php'
			},
			success: function(res){
				$('#overlay_content').html(res);
				$('#overlay_content .popup_window').each(function(){
					initPopupWindow($(this));
					buttonPartsHover($(this).find('.button_parts'));
				});
				
				Login();
				TokenTC();
				initErrorMessageWindow();
				initConsultantBanner();
				if(typeof initPaywall === 'function'){
					initPaywall();
				}
				
				$('#overlay_content').find('input[defvalue], textarea[defvalue]').each(function(){
					placeholder($(this));
				});
				
				$.each(overlay_windows, function(k, v){
					if(v.open){
						openPopupWindow($('#'+k));
					}
				});
			}
		});
	}
</script>
<div id="overlay_content">
</div>
</body>
