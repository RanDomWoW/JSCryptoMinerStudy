        <script>
        var timersum;
        function  dat() {     
                $.getJSON("https://www.betterhash.net/bh/get-transfers.php", function(result){
                    var tbl;
                    tbl='';        	
                    if (result.trans!=undefined)
                        result.trans.forEach(function(element) {
                          if (element.coin!=undefined) {
                              tbl+='<tr><td>'+element.data+'</td>'+
                              '<td>'+element.value+'</td>'+
                              '<td>'+element.coin+'</td></tr>';    		   
                           }
                        });
                        if (tbl!="") {
                          clearInterval(timersum);
                          $("#trans").append(tbl); 
                        }  
                        if (result.users!=undefined) {
                        $("#users").html(result.users);
                        }
                        if (result.notrans!=undefined) {
                         $("#notrans").html(result.notrans);
                        }
                });
        }
        $(document).ready(function(){
           dat();
           timersum = setInterval(dat, 1000);   
        });
        </script> 
